<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MARBLIN</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600&family=Playfair+Display:ital,wght@0,400;0,600;0,700;1,400&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Marblin.Web.styles.css" asp-append-version="true" />
</head>
<body class="d-flex flex-column min-vh-100">
    <header>
        @{
            var isHomePage = ViewContext.RouteData.Values["controller"]?.ToString() == "Home" && ViewContext.RouteData.Values["action"]?.ToString() == "Index";
            var navClasses = isHomePage ? "fixed-top transition-all" : "fixed-top glass-dark transition-all";
        }
        <nav class="navbar navbar-expand-lg navbar-dark @navClasses" id="mainNavbar" data-is-home="@isHomePage.ToString().ToLower()">
            <div class="container-fluid px-lg-5">
                <!-- Logo Left -->
                <a class="navbar-brand d-flex align-items-center gap-2" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/logo.jpg" alt="" class="logo-img" />
                    <span class="serif-font fw-bold fs-4 letter-spacing-2 text-white">MARBLIN</span>
                </a>
                
                <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                
                <!-- Links Centered/Rightish -->
                <div class="navbar-collapse collapse">
                    <ul class="navbar-nav mx-auto mb-2 mb-lg-0 align-items-center gap-4">
                        <li class="nav-item">
                            <a class="nav-link text-uppercase hover-underline text-white" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-uppercase hover-underline text-white-50 hover-white" asp-area="" asp-controller="Catalog" asp-action="Index">Shop</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-uppercase hover-underline text-white-50 hover-white" asp-area="" asp-controller="CustomRequest" asp-action="Create">Custom Request</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-uppercase hover-underline text-white-50 hover-white" asp-area="" asp-controller="Home" asp-action="About">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-uppercase hover-underline text-white-50 hover-white" asp-area="" asp-controller="Home" asp-action="Contact">Contact</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-uppercase hover-underline text-white-50 hover-white" asp-area="" asp-controller="Order" asp-action="Track">Track Order</a>
                        </li>
                    </ul>
                    
                    <!-- Right Actions (Cart) -->
                    <div class="d-flex align-items-center gap-3">
                        <partial name="_LoginPartial" />
                        <a asp-area="" asp-controller="Cart" asp-action="Index" class="btn btn-link text-white p-0 position-relative border-0" aria-label="Cart">
                            <i class="bi bi-cart3 fs-5"></i>
                            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-white text-dark shadow-sm" id="cartBadge" style="display:none; transform: translate(-50%, 50%) !important;">
                                0
                            </span>
                        </a>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main content with top margin handling for fixed navbar -->
    <main role="main" class="flex-grow-1" style="padding-top: 0;">
        @RenderBody()
    </main>

    <footer class="bg-dark text-white pt-5 pb-4 mt-auto border-top" style="border-color: rgba(255,255,255,0.05) !important;">
        <div class="container">
            <div class="row g-5">
                <div class="col-md-4">
                    <h4 class="serif-font mb-4 text-white">MARBLIN</h4>
                    <p class="text-secondary small mb-4" style="line-height: 1.8;">Handcrafted luxury marble and stone artifacts, designed to elevate your space with timeless elegance. Each piece matches the unique character of its origin.</p>
                    <div class="d-flex gap-3">
                        <a href="#" class="text-white-50 hover-white transition-all"><i class="bi bi-instagram fs-5"></i></a>
                        <a href="#" class="text-white-50 hover-white transition-all"><i class="bi bi-facebook fs-5"></i></a>
                        <a href="#" class="text-white-50 hover-white transition-all"><i class="bi bi-pinterest fs-5"></i></a>
                    </div>
                </div>
                <div class="col-md-2 offset-md-1">
                    <h6 class="text-uppercase small fw-bold mb-4 letter-spacing-2 text-white-50">Shop</h6>
                    <ul class="list-unstyled d-flex flex-column gap-2">
                        <li><a asp-controller="Catalog" asp-action="Index" class="text-white-50 hover-white text-decoration-none small transition-all">All Collections</a></li>
                        <li><a href="#" class="text-white-50 hover-white text-decoration-none small transition-all">New Arrivals</a></li>
                        <li><a href="#" class="text-white-50 hover-white text-decoration-none small transition-all">Bestsellers</a></li>
                    </ul>
                </div>
                <div class="col-md-2">
                    <h6 class="text-uppercase small fw-bold mb-4 letter-spacing-2 text-white-50">Support</h6>
                    <ul class="list-unstyled d-flex flex-column gap-2">
                        <li><a asp-controller="Order" asp-action="Track" class="text-white-50 hover-white text-decoration-none small transition-all">Track Order</a></li>
                        <li><a href="#" class="text-white-50 hover-white text-decoration-none small transition-all">Shipping & Returns</a></li>
                        <li><a href="#" class="text-white-50 hover-white text-decoration-none small transition-all">FAQ</a></li>
                    </ul>
                </div>
                <div class="col-md-3">
                    <h6 class="text-uppercase small fw-bold mb-4 letter-spacing-2 text-white-50">Contact</h6>
                    <p class="small mb-2 text-white-50"><i class="bi bi-envelope me-2"></i> hello@marblin.com</p>
                    <p class="small mb-4 text-white-50"><i class="bi bi-telephone me-2"></i> +20 123 456 7890</p>
                </div>
            </div>
            <div class="border-top mt-5 pt-4 text-center small text-secondary" style="border-color: rgba(255,255,255,0.05) !important;">
                <p class="mb-0">&copy; @DateTime.Now.Year MARBLIN. All rights reserved.</p>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

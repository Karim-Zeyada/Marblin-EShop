            <nav class="d-flex flex-column">
                <a class="mobile-drawer-link" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-house"></i> Home
                </a>
                <a class="mobile-drawer-link" asp-area="" asp-controller="Catalog" asp-action="Index">
                    <i class="bi bi-bag"></i> Shop
                </a>
                <a class="mobile-drawer-link" asp-area="" asp-controller="CustomRequest" asp-action="Create">
                    <i class="bi bi-palette"></i> Custom Request
                </a>
                <a class="mobile-drawer-link" asp-area="" asp-controller="Home" asp-action="About">
                    <i class="bi bi-info-circle"></i> About
                </a>
                <a class="mobile-drawer-link" asp-area="" asp-controller="Home" asp-action="Contact">
                    <i class="bi bi-envelope"></i> Contact
                </a>
                <a class="mobile-drawer-link" asp-area="" asp-controller="Order" asp-action="Track">
                    <i class="bi bi-truck"></i> Track Order
                </a>
                <partial name="_MobileLoginPartial" />
            </nav>


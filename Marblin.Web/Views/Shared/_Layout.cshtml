<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MARBLIN</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="icon" type="image/svg+xml" href="~/favicon.svg">

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600&family=Bodoni+Moda:ital,opsz,wght@0,6..96,400..900;1,6..96,400..900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    
    <link rel="stylesheet" href="~/css/base.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/components.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/pages.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/mobile.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Marblin.Web.styles.css" asp-append-version="true" />
</head>

<body class="d-flex flex-column min-vh-100">


    <header>
        @{
            var isHomePage =
            ViewContext.RouteData.Values["controller"]?.ToString() == "Home" &&
            ViewContext.RouteData.Values["action"]?.ToString() == "Index";

            var navClasses = "fixed-top transition-all";
        }
        <nav class="navbar navbar-expand-xl navbar-dark sticky-top @navClasses" id="mainNavbar">
            <div class="container-fluid px-lg-5">

                <a class="navbar-brand d-flex align-items-center gap-0"
                   asp-area="" asp-controller="Home" asp-action="Index">
                    <span class="font-brand-initial text-white">M</span>
                    <span class="font-brand-rest text-white">ARBLIN</span>
                </a>

                <!-- 2. MOBILE TOGGLER (Right) -->
                <button class="mobile-nav-toggle d-xl-none d-flex" type="button"
                        data-bs-toggle="offcanvas" data-bs-target="#mobileOffcanvas"
                        aria-controls="mobileOffcanvas" aria-label="Toggle navigation">
                    <i class="bi bi-list"></i>
                </button>

                <!-- 3. DESKTOP NAVIGATION (Unchanged) -->
                <div class="collapse navbar-collapse d-none d-xl-block">
                    <ul class="navbar-nav mx-auto gap-4">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white-50 hover-white" asp-area="" asp-controller="Catalog" asp-action="Index">Shop</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white-50 hover-white" asp-area="" asp-controller="CustomRequest" asp-action="Create">Custom Request</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white-50 hover-white" asp-area="" asp-controller="Home" asp-action="About">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white-50 hover-white" asp-area="" asp-controller="Home" asp-action="Contact">Contact</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white-50 hover-white" asp-area="" asp-controller="Order" asp-action="Track">Track Order</a>
                        </li>
                    </ul>

                    <div class="d-flex align-items-center gap-3">
                        <partial name="_LoginPartial" />
                        <a asp-area="" asp-controller="Cart" asp-action="Index"
                           class="btn btn-link text-white position-relative p-0 border-0">
                            <i class="bi bi-cart3 fs-5"></i>
                        </a>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <partial name="_AnnouncementBanner" />

    <!-- 4. MOBILE OFFCANVAS (Moved outside Header to avoid stacking context issues) -->
    <div class="offcanvas offcanvas-start mobile-offcanvas d-xl-none bg-black" tabindex="-1" id="mobileOffcanvas" aria-labelledby="mobileOffcanvasLabel">

        <!-- Header -->
        <div class="offcanvas-header p-4 border-bottom border-white-10">
            <div class="d-flex align-items-center gap-0">
                <!-- Brand Logo Copy -->
                <span class="font-brand-initial text-white">M</span>
                <span class="font-brand-rest text-white">ARBLIN</span>
            </div>
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>

        <!-- Body -->

    <!-- Scroll To Top Button (Bootstrap Only) -->
    <button id="scrollTopBtn"
            class="btn btn-dark btn-lg position-fixed bottom-0 end-0 m-4
               rounded-circle d-none d-flex align-items-center justify-content-center shadow"
            onclick="scrollToTop()">
        <i class="bi bi-arrow-up"></i>
    </button>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        const scrollBtn = document.getElementById("scrollTopBtn");

        window.addEventListener("scroll", () => {
            scrollBtn.classList.toggle("d-none", window.scrollY < 300);
        });

        function scrollToTop() {
            window.scrollTo({
                top: 0,
                behavior: "smooth"
            });
        }
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

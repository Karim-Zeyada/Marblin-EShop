<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MARBLIN</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600&family=Playfair+Display:wght@400;600;700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Marblin.Web.styles.css" asp-append-version="true" />
</head>

<body class="d-flex flex-column min-vh-100">

    <header>
        @{
            var isHomePage =
            ViewContext.RouteData.Values["controller"]?.ToString() == "Home" &&
            ViewContext.RouteData.Values["action"]?.ToString() == "Index";

            var navClasses = isHomePage
            ? "fixed-top transition-all"
            : "fixed-top glass-dark transition-all";
        }
        <nav class="navbar navbar-expand-lg navbar-dark sticky-top @navClasses" id="mainNavbar">
            <div class="container-fluid px-lg-5">

                <a class="navbar-brand d-flex align-items-center gap-2"
                   asp-controller="Home" asp-action="Index">
                    <img src="~/images/logo.jpg" alt="Logo" class="logo-img" />
                    <span class="fw-bold fs-4 text-white">MARBLIN</span>
                </a>

                <button class="navbar-toggler border-0" type="button"
                        data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse">
                    <ul class="navbar-nav mx-auto gap-4">
                        <li class="nav-item">
                            <a class="nav-link text-white"
                               asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white-50 hover-white"
                               asp-controller="Catalog" asp-action="Index">Shop</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white-50 hover-white"
                               asp-controller="CustomRequest" asp-action="Create">Custom Request</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white-50 hover-white"
                               asp-controller="Home" asp-action="About">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white-50 hover-white"
                               asp-controller="Home" asp-action="Contact">Contact</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white-50 hover-white"
                               asp-controller="Order" asp-action="Track">Track Order</a>
                        </li>
                    </ul>

                    <div class="d-flex align-items-center gap-3">
                        <partial name="_LoginPartial" />
                        <a asp-controller="Cart" asp-action="Index"
                           class="btn btn-link text-white position-relative p-0 border-0">
                            <i class="bi bi-cart3 fs-5"></i>
                        </a>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="flex-grow-1"
          style="@(!isHomePage ? "padding-top: var(--navbar-height);" : "")">
        @RenderBody()
    </main>

    <footer class="bg-dark text-white pt-5 pb-4 mt-auto border-top">
        <div class="container text-center small text-secondary">
            &copy; @DateTime.Now.Year MARBLIN. All rights reserved.
        </div>
    </footer>

    <!-- Scroll To Top Button (Bootstrap Only) -->
    <button id="scrollTopBtn"
            class="btn btn-dark btn-lg position-fixed bottom-0 end-0 m-4
               rounded-circle d-none d-flex align-items-center justify-content-center shadow"
            onclick="scrollToTop()">
        <i class="bi bi-arrow-up"></i>
    </button>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        const scrollBtn = document.getElementById("scrollTopBtn");

        window.addEventListener("scroll", () => {
            scrollBtn.classList.toggle("d-none", window.scrollY < 300);
        });

        function scrollToTop() {
            window.scrollTo({
                top: 0,
                behavior: "smooth"
            });
        }
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MARBLIN</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600&family=Bodoni+Moda:ital,opsz,wght@0,6..96,400..900;1,6..96,400..900&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Marblin.Web.styles.css" asp-append-version="true" />
</head>

<body class="d-flex flex-column min-vh-100">


    <header>
        @{
            var isHomePage =
            ViewContext.RouteData.Values["controller"]?.ToString() == "Home" &&
            ViewContext.RouteData.Values["action"]?.ToString() == "Index";

            var navClasses = "fixed-top transition-all";
        }
        <nav class="navbar navbar-expand-xl navbar-dark sticky-top @navClasses" id="mainNavbar">
            <div class="container-fluid px-lg-5">

                <a class="navbar-brand d-flex align-items-center gap-0"
                   asp-area="" asp-controller="Home" asp-action="Index">
                    <span class="font-brand-initial text-white">M</span>
                    <span class="font-brand-rest text-white">ARBLIN</span>
                </a>

                <!-- 2. MOBILE TOGGLER (Right) -->
                <button class="mobile-nav-toggle d-xl-none d-flex" type="button"
                        data-bs-toggle="offcanvas" data-bs-target="#mobileOffcanvas"
                        aria-controls="mobileOffcanvas" aria-label="Toggle navigation">
                    <i class="bi bi-list"></i>
                </button>

                <!-- 3. DESKTOP NAVIGATION (Unchanged) -->
                <div class="collapse navbar-collapse d-none d-xl-block">
                    <ul class="navbar-nav mx-auto gap-4">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white-50 hover-white" asp-area="" asp-controller="Catalog" asp-action="Index">Shop</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white-50 hover-white" asp-area="" asp-controller="CustomRequest" asp-action="Create">Custom Request</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white-50 hover-white" asp-area="" asp-controller="Home" asp-action="About">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white-50 hover-white" asp-area="" asp-controller="Home" asp-action="Contact">Contact</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white-50 hover-white" asp-area="" asp-controller="Order" asp-action="Track">Track Order</a>
                        </li>
                    </ul>

                    <div class="d-flex align-items-center gap-3">
                        <partial name="_LoginPartial" />
                        <a asp-area="" asp-controller="Cart" asp-action="Index"
                           class="btn btn-link text-white position-relative p-0 border-0">
                            <i class="bi bi-cart3 fs-5"></i>
                        </a>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <partial name="_AnnouncementBanner" />

    <!-- 4. MOBILE OFFCANVAS (Moved outside Header to avoid stacking context issues) -->
    <div class="offcanvas offcanvas-start mobile-offcanvas d-xl-none bg-black" tabindex="-1" id="mobileOffcanvas" aria-labelledby="mobileOffcanvasLabel">

        <!-- Header -->
        <div class="offcanvas-header p-4 border-bottom border-white-10">
            <div class="d-flex align-items-center gap-0">
                <!-- Brand Logo Copy -->
                <span class="font-brand-initial text-white">M</span>
                <span class="font-brand-rest text-white">ARBLIN</span>
            </div>
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>

        <!-- Body -->
        <div class="offcanvas-body p-4">
            <nav class="d-flex flex-column">
                <a class="mobile-drawer-link" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-house"></i> Home
                </a>
                <a class="mobile-drawer-link" asp-area="" asp-controller="Catalog" asp-action="Index">
                    <i class="bi bi-bag"></i> Shop
                </a>
                <a class="mobile-drawer-link" asp-area="" asp-controller="CustomRequest" asp-action="Create">
                    <i class="bi bi-palette"></i> Custom Request
                </a>
                <a class="mobile-drawer-link" asp-area="" asp-controller="Home" asp-action="About">
                    <i class="bi bi-info-circle"></i> About
                </a>
                <a class="mobile-drawer-link" asp-area="" asp-controller="Home" asp-action="Contact">
                    <i class="bi bi-envelope"></i> Contact
                </a>
                <a class="mobile-drawer-link" asp-area="" asp-controller="Order" asp-action="Track">
                    <i class="bi bi-truck"></i> Track Order
                </a>
                <partial name="_MobileLoginPartial" />
            </nav>

            <!-- Mobile Footer -->
            <div class="mt-5 pt-4 border-top border-white-10">
                <p class="text-white small mb-3">Follow Us</p>
                <div class="d-flex gap-4">
                    <a href="#" class="text-white fs-5"><i class="bi bi-instagram"></i></a>
                    <a href="#" class="text-white fs-5"><i class="bi bi-facebook"></i></a>
                    <a href="#" class="text-white fs-5"><i class="bi bi-twitter-x"></i></a>
                </div>
            </div>
        </div>
    </div>

    <main role="main" class="flex-grow-1"
          style="@(!isHomePage ? "padding-top: var(--navbar-height);" : "")">
        @RenderBody()
    </main>

    <footer class="mt-auto">
        <div class="container">
            <div class="row g-5">
                <!-- Section 1: Brand & Bio -->
                <div class="col-lg-4 col-md-6 col-12">
                    <a asp-area="" asp-controller="Home" asp-action="Index" class="text-decoration-none">
                        <span class="footer-brand">MARBLIN</span>
                    </a>
                    <p class="footer-bio">
                        Exceptional craftsmanship meets contemporary minimalism.
                        Dedicated to providing a curated selection of luxury goods
                        that define modern elegance and timeless style.
                    </p>
                </div>

                <!-- Section 2: Links -->
                <div class="col-lg-4 col-md-6 col-12">
                    <div class="row">
                        <div class="col-6">
                            <h5 class="footer-heading">Discover</h5>
                            <ul class="footer-links">
                                <li><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                                <li><a asp-area="" asp-controller="Catalog" asp-action="Index">Shop Collection</a></li>
                                <li><a asp-area="" asp-controller="CustomRequest" asp-action="Create">Bespoke</a></li>
                            </ul>
                        </div>
                        <div class="col-6">
                            <h5 class="footer-heading">Assistance</h5>
                            <ul class="footer-links">
                                <li><a asp-area="" asp-controller="Home" asp-action="Contact">Contact</a></li>
                                <li><a asp-area="" asp-controller="Order" asp-action="Track">Track Order</a></li>
                                <li><a asp-area="" asp-controller="Home" asp-action="About">About</a></li>
                            </ul>
                        </div>
                    </div>
                </div>

                <!-- Section 3: Contact -->
                <div class="col-lg-4 col-md-6 col-12">
                    <h5 class="footer-heading">Contact</h5>
                    <ul class="footer-links mt-4">
                        <li>
                            <p class="text-sm text-white-60 mb-2">123 Design Avenue, New York, NY</p>
                        </li>
                        <li>
                            <a class="text-sm text-white-60 hover-white" href="mailto:contact@marblin.com">contact@marblin.com</a>
                        </li>
                    </ul>
                    <div class="social-links d-flex gap-3 mt-4">
                        <a class="text-white-60 hover-white fs-5" href="#">
                            <i class="bi bi-instagram"></i>
                        </a>
                        <a class="text-white-60 hover-white fs-5" href="#">
                            <i class="bi bi-facebook"></i>
                        </a>
                        <a class="text-white-60 hover-white fs-5" href="#">
                            <i class="bi bi-twitter-x"></i>
                        </a>
                    </div>
                </div>
            </div>

            <!-- Footer Bottom -->
            <div class="footer-bottom text-center">
                <p class="mb-0">
                    &copy; @DateTime.Now.Year MARBLIN. Curated with precision.
                </p>
            </div>
        </div>
    </footer>

    <!-- Scroll To Top Button (Bootstrap Only) -->
    <button id="scrollTopBtn"
            class="btn btn-dark btn-lg position-fixed bottom-0 end-0 m-4
               rounded-circle d-none d-flex align-items-center justify-content-center shadow"
            onclick="scrollToTop()">
        <i class="bi bi-arrow-up"></i>
    </button>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        const scrollBtn = document.getElementById("scrollTopBtn");

        window.addEventListener("scroll", () => {
            scrollBtn.classList.toggle("d-none", window.scrollY < 300);
        });

        function scrollToTop() {
            window.scrollTo({
                top: 0,
                behavior: "smooth"
            });
        }
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<h1 class="text-danger">Error.</h1>
<h2 class="text-danger">An error occurred while processing your request.</h2>

@if (Model.ShowRequestId)
{
    <p>
        <strong>Request ID:</strong> <code>@Model.RequestId</code>
    </p>
}

@if (Model.ShowRequestId)
{
    <p class="mt-4">
        <strong>Request ID:</strong> <code class="bg-light p-1 rounded">@Model.RequestId</code>
    </p>
}

<div class="mt-5 p-4 bg-light rounded text-center">
    <p class="mb-0">Please provide the Request ID above to our support team if the problem persists.</p>
</div>

@model Marblin.Web.ViewModels.ContactViewModel
@{
    ViewData["Title"] = "Contact Us";
}

<div class="container my-5 py-5">
    <div class="row justify-content-center text-center mb-5">
        <div class="col-lg-8">
            <h1 class="display-4 serif-font mb-4">Get in Touch</h1>
            <p class="lead text-muted">We'd love to hear from you. Whether you have a question about our collections, custom orders, or shipping, our team is ready to help.</p>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="row justify-content-center mb-4">
            <div class="col-md-8">
                <div class="alert alert-success alert-dismissible fade show">
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    @TempData["Success"]
                </div>
            </div>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="row justify-content-center mb-4">
            <div class="col-md-8">
                <div class="alert alert-danger alert-dismissible fade show">
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    @TempData["Error"]
                </div>
            </div>
        </div>
    }

    <div class="row g-5">
        <div class="col-md-6">
            <div class="p-4 bg-light h-100">
                <h3 class="serif-font mb-4">Contact Information</h3>
                <ul class="list-unstyled mb-4">
                    <li class="mb-3"><i class="bi bi-geo-alt me-2 text-primary"></i> 123 Marble Way, Stone City, Egypt</li>
                    <li class="mb-3"><i class="bi bi-envelope me-2 text-primary"></i> hello@marblin.com</li>
                    <li class="mb-3"><i class="bi bi-telephone me-2 text-primary"></i> +20 123 456 7890</li>
                </ul>
                <h4 class="h5 serif-font">Business Hours</h4>
                <p class="text-muted">Sunday - Thursday: 9:00 AM - 6:00 PM</p>
                
                <div class="mt-4">
                     <h4 class="h5 serif-font mb-3">Follow Us</h4>
                     <div class="d-flex gap-3 fs-4">
                        <a href="#" class="text-dark"><i class="bi bi-instagram"></i></a>
                        <a href="#" class="text-dark"><i class="bi bi-facebook"></i></a>
                        <a href="#" class="text-dark"><i class="bi bi-pinterest"></i></a>
                     </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <form asp-action="Contact" asp-controller="Home" method="post">
                <div class="mb-3">
                    <label asp-for="Name" class="form-label">Name</label>
                    <input asp-for="Name" class="form-control" placeholder="Your Name">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                 <div class="mb-3">
                    <label asp-for="Email" class="form-label">Email</label>
                    <input asp-for="Email" class="form-control" placeholder="name@example.com">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                 <div class="mb-3">
                    <label asp-for="Message" class="form-label">Message</label>
                    <textarea asp-for="Message" class="form-control" rows="5" placeholder="How can we help?"></textarea>
                    <span asp-validation-for="Message" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-dark w-100">SEND MESSAGE</button>
            </form>
        </div>
    </div>
</div>


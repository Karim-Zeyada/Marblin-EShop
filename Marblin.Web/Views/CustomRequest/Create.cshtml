@model Marblin.Core.Entities.CustomRequest
@{
    ViewData["Title"] = "Custom Request";
}

<div class="container my-5" style="max-width: 800px;">
    <div class="text-center mb-5">
        <h1 class="serif-font display-4">Bespoke Creations</h1>
        <p class="lead text-muted">Tell us about your dream piece. We'll bring it to life.</p>
    </div>

    <form asp-action="Create" method="post" enctype="multipart/form-data" class="card border-0 shadow-sm">
        <div class="card-body p-5">
            <h5 class="serif-font mb-4">Your Contact Info</h5>
            <div class="row g-3">
                <div class="col-md-6">
                    <label asp-for="CustomerName" class="form-label">Full Name</label>
                    <input asp-for="CustomerName" class="form-control" required placeholder="Name" />
                </div>
                <div class="col-md-6">
                    <label asp-for="Phone" class="form-label">Phone Number</label>
                    <input asp-for="Phone" class="form-control" required placeholder="Phone" />
                </div>
                <div class="col-12">
                     <label asp-for="Email" class="form-label">Email Address</label>
                     <input asp-for="Email" class="form-control" required placeholder="Email" />
                </div>
            </div>

            <hr class="my-5" />

            <h5 class="serif-font mb-4">Project Details</h5>
            <div class="row g-3">
                <div class="col-md-6">
                    <label asp-for="Category" class="form-label">Type of Object</label>
                    <select asp-for="Category" class="form-select">
                        <option value="">-- Select Type --</option>
                        <option value="Table">Table</option>
                        <option value="Sink">Sink / Basin</option>
                        <option value="Sculpture">Sculpture</option>
                        <option value="Countertop">Countertop</option>
                        <option value="Other">Other</option>
                    </select>
                </div>
                <div class="col-md-6">
                    <label asp-for="Material" class="form-label">Preferred Material</label>
                    <input asp-for="Material" class="form-control" placeholder="e.g. Carrara Marble, Granite..." />
                </div>

                <div class="col-md-6">
                    <label asp-for="Dimensions" class="form-label">Approx. Dimensions</label>
                    <input asp-for="Dimensions" class="form-control" placeholder="e.g. 100cm x 50cm" />
                </div>
                <div class="col-md-6">
                    <label asp-for="BudgetRange" class="form-label">Budget Range</label>
                    <select asp-for="BudgetRange" class="form-select">
                        <option value="">-- Select Budget --</option>
                        <option value="Under $1,000">Under $1,000</option>
                        <option value="$1,000 - $5,000">$1,000 - $5,000</option>
                        <option value="$5,000 - $10,000">$5,000 - $10,000</option>
                        <option value="Above $10,000">Above $10,000</option>
                    </select>
                </div>
                
                 <div class="col-md-12">
                    <label asp-for="Timeline" class="form-label">Desired Timeline</label>
                    <input asp-for="Timeline" class="form-control" placeholder="e.g. 4-6 weeks" />
                </div>

                <div class="col-12">
                    <label asp-for="Notes" class="form-label">Description & Details</label>
                    <textarea asp-for="Notes" class="form-control" rows="5" placeholder="Describe your vision..."></textarea>
                </div>

                <div class="col-12">
                    <label class="form-label">Inspiration Images</label>
                    <input type="file" name="inspirationImages" class="form-control" multiple accept="image/*" />
                    <div class="form-text">Upload sketches or photos of similar items.</div>
                </div>
            </div>

            <div class="mt-5 text-center">
                <button type="submit" class="btn btn-dark btn-lg rounded-0 px-5">SUBMIT REQUEST</button>
            </div>
        </div>
    </form>
</div>

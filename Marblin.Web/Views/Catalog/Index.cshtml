@model Marblin.Core.Common.PaginatedList<Marblin.Core.Entities.Product>
@{
    ViewData["Title"] = "Collection";
    var currentCategory = ViewBag.CurrentCategory as Marblin.Core.Entities.Category;
}

<div class="container my-5 pt-3">
    <div class="text-center mb-5 animate-fade-in-up">
        <h1 class="display-4 serif-font mb-3">@(currentCategory?.Name ?? "All Collections")</h1>
        @if (!string.IsNullOrEmpty(currentCategory?.Description))
        {
            <p class="lead text-secondary col-md-8 mx-auto" style="font-size: 1.1rem;">@currentCategory.Description</p>
        }
        <div class="separator-line mx-auto mt-4"></div>
    </div>

    <!-- Top Toolbar (Desktop) -->
    <div class="row mb-5 align-items-center d-none d-lg-flex">
        <div class="col">
            <span class="text-secondary letter-spacing-1 text-uppercase small">
                Showing @Model.Count products
            </span>
        </div>
        <div class="col-auto">
            <button class="btn btn-outline-dark rounded-0 px-4 d-flex align-items-center gap-2" type="button" data-bs-toggle="offcanvas" data-bs-target="#desktopFilterOffcanvas">
                <i class="bi bi-sliders"></i> FILTER & SORT
            </button>
        </div>
    </div>

    <div class="row g-5">
        <!-- Sidebar Removed in favor of Drawer -->

        <!-- Product Grid (Full Width) -->
        <div class="col-12">
            @if (Model.Any())
            {
                <div class="row g-4 mb-5">
                    @foreach (var product in Model)
                    {
                        var primaryImage = product.Images.FirstOrDefault(i => i.IsPrimary) ?? product.Images.FirstOrDefault();
                        // Change column size to show 4 per row on Desktop (col-lg-3)
                        <div class="col-6 col-md-4 col-lg-3">
                            <div class="card product-card h-100 border-0 shadow-sm bg-white">
                                <div class="position-relative overflow-hidden">
                                    <a asp-action="Details" asp-route-id="@product.Id" class="d-block">
                                        @if (primaryImage != null)
                                        {
                                            <img src="@primaryImage.ImageUrl" class="card-img-top product-image" alt="@product.Name">
                                        }
                                        else
                                        {
                                            <div class="placeholder-bg d-flex align-items-center justify-content-center product-image-fallback">
                                                <span class="text-muted">No Image</span>
                                            </div>
                                        }
                                    </a>
                                    
                                    @if (product.IsOnSale())
                                    {
                                        <span class="badge badge-sale shadow-sm">SALE @product.GetDiscountPercentage()% OFF</span>
                                    }
                                    else if(product.IsSignaturePiece)
                                    {
                                        <span class="badge bg-dark text-white rounded-0 position-absolute top-0 start-0 m-3 px-3 py-2 small letter-spacing-1 shadow-sm">SIGNATURE</span>
                                    }
                                    
                                    <div class="product-overlay d-flex align-items-center justify-content-center glass-effect border-0">
                                        <a asp-action="Details" asp-route-id="@product.Id" class="btn btn-dark rounded-0 px-4 py-3 shadow-lg">VIEW DETAILS</a>
                                    </div>
                                </div>
                                <div class="card-body text-center mt-3 pb-4">
                                    <h5 class="card-title serif-font h6 mb-2">
                                        <a asp-action="Details" asp-route-id="@product.Id" class="text-decoration-none text-dark hover-underline">@product.Name</a>
                                    </h5>
                                    <div class="text-secondary small mb-0 letter-spacing-1 d-flex justify-content-center">
                                        @if (product.Availability == Marblin.Core.Enums.ProductAvailability.OutOfStock)
                                        {
                                            <span class="text-danger">Out of Stock</span>
                                        }
                                        else if (product.IsOnSale())
                                        {
                                            <div class="price-container">
                                                <span class="original-price">@product.BasePrice.ToString("C0")</span>
                                                <span class="sale-price">@product.SalePrice?.ToString("C0")</span>
                                            </div>
                                        }
                                        else
                                        {
                                            <span>@product.BasePrice.ToString("C0")</span>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <!-- Pagination -->
                @if (Model.TotalPages > 1)
                {
                    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
                    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
                    
                    <nav aria-label="Product pagination" class="mt-5 pt-4 border-top">
                        <ul class="pagination justify-content-center gap-2">
                            <li class="page-item @prevDisabled">
                                <a class="page-link rounded-0 text-dark border-0 shadow-none ps-0 bg-transparent opacity-75 hover-opacity-100" 
                                   asp-action="Index"
                                   asp-route-page="@(Model.PageIndex - 1)"
                                   asp-route-categoryId="@ViewBag.CategoryId"
                                   asp-route-sort="@ViewBag.Sort"
                                   aria-label="Previous">
                                    <span aria-hidden="true" class="serif-font small text-uppercase letter-spacing-1">&laquo; Prev</span>
                                </a>
                            </li>
                            @for (int i = 1; i <= Model.TotalPages; i++)
                            {
                                <li class="page-item">
                                    <a class="page-link rounded-0 border-0 shadow-none @(i == Model.PageIndex ? "text-dark fw-bold text-decoration-underline" : "text-muted") bg-transparent" 
                                       asp-action="Index"
                                       asp-route-page="@i"
                                       asp-route-categoryId="@ViewBag.CategoryId"
                                       asp-route-sort="@ViewBag.Sort">
                                        @i
                                    </a>
                                </li>
                            }
                            <li class="page-item @nextDisabled">
                                <a class="page-link rounded-0 text-dark border-0 shadow-none pe-0 bg-transparent opacity-75 hover-opacity-100" 
                                   asp-action="Index"
                                   asp-route-page="@(Model.PageIndex + 1)"
                                   asp-route-categoryId="@ViewBag.CategoryId"
                                   asp-route-sort="@ViewBag.Sort"
                                   aria-label="Next">
                                    <span aria-hidden="true" class="serif-font small text-uppercase letter-spacing-1">Next &raquo;</span>
                                </a>
                            </li>
                        </ul>
                    </nav>
                }
            }
            else
            {
                <div class="text-center py-5">
                    <h3 class="h5 text-muted mb-4">No products found in this category.</h3>
                    <a asp-action="Index" class="btn btn-outline-dark rounded-0 px-5">View All Collections</a>
                </div>
            }
        </div>
    </div>
</div>

<!-- Desktop Filter Drawer (Right Side) -->
<div class="offcanvas offcanvas-end" tabindex="-1" id="desktopFilterOffcanvas" aria-labelledby="desktopFilterLabel">
    <div class="offcanvas-header border-bottom">
        <h5 class="offcanvas-title serif-font" id="desktopFilterLabel">Filter & Sort</h5>
        <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>
    <div class="offcanvas-body">
        <div class="mb-5">
            <h6 class="text-uppercase small fw-bold mb-3 letter-spacing-2 text-secondary">Categories</h6>
            <ul class="list-unstyled d-flex flex-column gap-2">
                <li>
                    <a asp-action="Index" class="text-decoration-none transition-all @(ViewBag.CategoryId == null ? "text-dark fw-bold ps-2 border-start border-3 border-dark" : "text-muted hover-underline")">All Products</a>
                </li>
                @if (ViewBag.Categories is List<Marblin.Core.Entities.Category> desktopCategories)
                {
                    foreach (var cat in desktopCategories)
                    {
                        <li>
                            <a asp-action="Index" asp-route-categoryId="@cat.Id" class="text-decoration-none transition-all @(ViewBag.CategoryId == cat.Id ? "text-dark fw-bold ps-2 border-start border-3 border-dark" : "text-muted hover-underline")">
                                @cat.Name
                            </a>
                        </li>
                    }
                }
            </ul>
        </div>

        <div class="mb-4">
            <h6 class="text-uppercase small fw-bold mb-3 letter-spacing-2 text-secondary">Sort By</h6>
            <form method="get" id="desktopSortForm">
                @if (ViewBag.CategoryId != null)
                {
                    <input type="hidden" name="categoryId" value="@ViewBag.CategoryId" />
                }
                <div class="d-flex flex-column gap-2">
                     <button type="submit" name="sort" value="" class="btn btn-outline-dark text-start border-0 border-bottom rounded-0 @(string.IsNullOrEmpty(ViewBag.Sort) ? "fw-bold" : "")">Featured</button>
                     <button type="submit" name="sort" value="newest" class="btn btn-outline-dark text-start border-0 border-bottom rounded-0 @(ViewBag.Sort == "newest" ? "fw-bold" : "")">New Arrivals</button>
                     <button type="submit" name="sort" value="price_asc" class="btn btn-outline-dark text-start border-0 border-bottom rounded-0 @(ViewBag.Sort == "price_asc" ? "fw-bold" : "")">Price: Low to High</button>
                     <button type="submit" name="sort" value="price_desc" class="btn btn-outline-dark text-start border-0 border-bottom rounded-0 @(ViewBag.Sort == "price_desc" ? "fw-bold" : "")">Price: High to Low</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="fixed-bottom d-lg-none bg-white border-top shadow-lg p-3 mobile-filter-bar" style="z-index: 1040;">
    <div class="row g-2">
        <div class="col-12">
            <button class="btn btn-dark w-100 rounded-0 d-flex align-items-center justify-content-center gap-2 py-3" type="button" data-bs-toggle="offcanvas" data-bs-target="#filterOffcanvas">
                <i class="bi bi-sliders"></i> FILTER & SORT
            </button>
        </div>
    </div>
</div>

<div class="offcanvas offcanvas-bottom h-75" tabindex="-1" id="filterOffcanvas" aria-labelledby="filterOffcanvasLabel" style="border-top-left-radius: 1rem; border-top-right-radius: 1rem;">
    <div class="offcanvas-header border-bottom">
        <h5 class="offcanvas-title serif-font" id="filterOffcanvasLabel">Filter & Sort</h5>
        <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>
    <div class="offcanvas-body">
        <div class="mb-5">
            <h6 class="text-uppercase small fw-bold mb-3 letter-spacing-2 text-secondary">Categories</h6>
            <ul class="list-unstyled d-flex flex-column gap-2">
                <li>
                    <a asp-action="Index" class="text-decoration-none transition-all @(ViewBag.CategoryId == null ? "text-dark fw-bold ps-2 border-start border-3 border-dark" : "text-muted hover-underline")">All Products</a>
                </li>
                @if (ViewBag.Categories is List<Marblin.Core.Entities.Category> mobileCategories)
                {
                    foreach (var cat in mobileCategories)
                    {
                        <li>
                            <a asp-action="Index" asp-route-categoryId="@cat.Id" class="text-decoration-none transition-all @(ViewBag.CategoryId == cat.Id ? "text-dark fw-bold ps-2 border-start border-3 border-dark" : "text-muted hover-underline")">
                                @cat.Name
                            </a>
                        </li>
                    }
                }
            </ul>
        </div>

        <div class="mb-4">
            <h6 class="text-uppercase small fw-bold mb-3 letter-spacing-2 text-secondary">Sort By</h6>
            <form method="get" id="mobileSortForm">
                @if (ViewBag.CategoryId != null)
                {
                    <input type="hidden" name="categoryId" value="@ViewBag.CategoryId" />
                }
                <div class="d-flex flex-column gap-2">
                     <button type="submit" name="sort" value="" class="btn btn-outline-dark text-start border-0 border-bottom rounded-0 @(string.IsNullOrEmpty(ViewBag.Sort) ? "fw-bold" : "")">Featured</button>
                     <button type="submit" name="sort" value="newest" class="btn btn-outline-dark text-start border-0 border-bottom rounded-0 @(ViewBag.Sort == "newest" ? "fw-bold" : "")">New Arrivals</button>
                     <button type="submit" name="sort" value="price_asc" class="btn btn-outline-dark text-start border-0 border-bottom rounded-0 @(ViewBag.Sort == "price_asc" ? "fw-bold" : "")">Price: Low to High</button>
                     <button type="submit" name="sort" value="price_desc" class="btn btn-outline-dark text-start border-0 border-bottom rounded-0 @(ViewBag.Sort == "price_desc" ? "fw-bold" : "")">Price: High to Low</button>
                </div>
            </form>
        </div>
    </div>
</div>

@model List<Marblin.Core.Entities.CustomRequest>
@{
    ViewData["Title"] = "Custom Requests";
}

<div class="admin-header">
    <h1>Custom Requests</h1>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show"><button type="button" class="btn-close" data-bs-dismiss="alert"></button>@TempData["Success"]</div>
}

<div class="stat-card mb-4">
    <form method="get" class="row g-3">
        <div class="col-md-3">
            <select name="reviewed" class="form-select">
                <option value="">All</option>
                <option value="false" selected="@(ViewBag.Reviewed == false)">Unreviewed</option>
                <option value="true" selected="@(ViewBag.Reviewed == true)">Reviewed</option>
            </select>
        </div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-outline-dark w-100">Filter</button>
        </div>
    </form>
</div>

<div class="stat-card">
    @if (Model.Any())
    {
        <table class="table table-hover mb-0">
            <thead>
                <tr>
                    <th>Customer</th>
                    <th>Category</th>
                    <th>Material</th>
                    <th>Budget</th>
                    <th>Status</th>
                    <th>Date</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var r in Model)
                {
                    <tr>
                        <td>@r.CustomerName<br /><small class="text-muted">@r.Email</small></td>
                        <td>@r.Category</td>
                        <td>@(r.Material ?? "Not specified")</td>
                        <td>@(r.BudgetRange ?? "â€”")</td>
                        <td>
                            @if (r.IsReviewed)
                            {
                                <span class="badge bg-success">Reviewed</span>
                            }
                            else
                            {
                                <span class="badge bg-warning text-dark">New</span>
                            }
                        </td>
                        <td>@r.CreatedAt.ToString("MMM d")</td>
                        <td><a asp-action="Details" asp-route-id="@r.Id" class="btn btn-sm btn-outline-dark">View</a></td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="text-muted mb-0">No custom requests yet.</p>
    }
</div>

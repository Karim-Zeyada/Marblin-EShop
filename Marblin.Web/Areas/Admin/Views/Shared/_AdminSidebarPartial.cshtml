<div class="admin-sidebar-content vh-100 overflow-y-auto">


    <!-- Navigation -->
    <div class="admin-nav-list mt-lg-2">
        <div class="admin-nav-label">Management</div>

        <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="admin-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Dashboard" ? "active" : "")">
            <i class="bi bi-speedometer2"></i> Dashboard
        </a>

        <a asp-area="Admin" asp-controller="Products" asp-action="Index" class="admin-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Products" ? "active" : "")">
            <i class="bi bi-box-seam"></i> Products
        </a>

        <a asp-area="Admin" asp-controller="Categories" asp-action="Index" class="admin-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Categories" ? "active" : "")">
            <i class="bi bi-tags"></i> Categories
        </a>

        <a asp-area="Admin" asp-controller="Orders" asp-action="Index" class="admin-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Orders" ? "active" : "")">
            <i class="bi bi-receipt"></i> Orders
        </a>

        <a asp-area="Admin" asp-controller="Coupons" asp-action="Index" class="admin-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Coupons" ? "active" : "")">
            <i class="bi bi-ticket-perforated"></i> Coupons
        </a>

        <a asp-area="Admin" asp-controller="Announcements" asp-action="Index" class="admin-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Announcements" ? "active" : "")">
            <i class="bi bi-megaphone"></i> Announcements
        </a>

        <a asp-area="Admin" asp-controller="CustomRequests" asp-action="Index" class="admin-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "CustomRequests" ? "active" : "")">
            <i class="bi bi-palette"></i> Custom Requests
        </a>

        <div class="admin-nav-label mt-4">System</div>
        <a asp-area="Admin" asp-controller="Settings" asp-action="Index" class="admin-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Settings" ? "active" : "")">
            <i class="bi bi-gear"></i> Settings
        </a>
    </div>

    <!-- Sidebar Footer -->
    <div class="admin-sidebar-footer">
        <a asp-area="" asp-controller="Home" asp-action="Index" class="admin-link p-0 mb-4 text-white-50 hover-white">
            <i class="bi bi-shop me-2"></i> Storefront
        </a>
        <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post">
            <button type="submit" class="btn-luxury-logout">
                <i class="bi bi-box-arrow-right"></i> Logout
            </button>
        </form>
    </div>
</div>
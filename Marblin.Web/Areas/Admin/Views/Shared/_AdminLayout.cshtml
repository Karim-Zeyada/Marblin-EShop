<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MARBLIN Admin</title>

    <!-- Core Dependencies -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="icon" type="image/svg+xml" href="~/favicon.svg">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <!-- Premium Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Playfair+Display:wght@400;600;700&family=Bodoni+Moda:ital,opsz,wght@0,6..96,400..900;1,6..96,400..900&display=swap" rel="stylesheet">

    <!-- Unified Styling -->
    <link rel="stylesheet" href="~/css/base.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/components.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/pages.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/mobile.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/admin-custom.css" asp-append-version="true" />
</head>
<body class="admin-body">

    <!-- 1. MOBILE TOPBAR (Visible only < 992px) -->
    <nav class="navbar admin-top-navbar">
        <a class="navbar-brand d-flex align-items-center gap-2" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">
            <!-- Brand Logo -->
            <div class="d-flex align-items-center">
                <span class="font-brand-initial text-white admin-brand-initial">M</span>
                <span class="font-brand-rest text-white admin-brand-rest">ARBLIN</span>
            </div>
            <span class="fs-6 text-white-50 fw-light ms-2" style="letter-spacing: 0.1em; transform: translateY(2px);">ADMIN</span>
        </a>
        <button class="navbar-toggler border-0 p-0" type="button"
                data-bs-toggle="offcanvas" data-bs-target="#adminMobileDrawer"
                aria-controls="adminMobileDrawer">
            <i class="bi bi-list fs-1 text-white"></i>
        </button>
    </nav>

    <div class="d-flex">
        <!-- 2. DESKTOP SIDEBAR (Fixed positions on left) -->
        <aside class="admin-sidebar-wrapper">
                <!-- Brand (Desktop) -->
            <a class="navbar-brand d-flex align-items-center justify-content-center py-4 border-bottom border-white-10 me-0" asp-area="Admin" asp-controller="Dashboard" asp-action="Index" style="text-decoration: none;">
                    <div class="d-flex align-items-center">
                        <span class="font-brand-initial text-white admin-brand-initial">M</span>
                        <span class="font-brand-rest text-white admin-brand-rest">ARBLIN</span>
                    </div>
                    <span class="fs-6 text-white-50 fw-light ms-2" style="letter-spacing: 0.1em; align-self: center; transform: translateY(2px);">ADMIN</span>
                </a>
            @await Html.PartialAsync("_AdminSidebarPartial")
        </aside>

        <!-- 3. MOBILE OFFCANVAS (Slides from Right) -->
        <div class="offcanvas offcanvas-end admin-offcanvas d-lg-none" tabindex="-1" id="adminMobileDrawer" aria-labelledby="adminMobileDrawerLabel">
            <div class="offcanvas-header border-bottom border-white-10">
                <!-- Brand (Desktop) -->
                <a class="navbar-brand d-flex align-items-center justify-content-center py-4 " asp-area="Admin" asp-controller="Dashboard" asp-action="Index" style="text-decoration: none;">
                    <div class="d-flex align-items-center">
                        <span class="font-brand-initial text-white admin-brand-initial">M</span>
                        <span class="font-brand-rest text-white admin-brand-rest">ARBLIN</span>
                    </div>
                    <span class="fs-6 text-white-50 fw-light ms-2" style="letter-spacing: 0.1em; align-self: center; transform: translateY(2px);">ADMIN</span>
                </a>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas" aria-label="Close"></button>
            </div>
            <div class="offcanvas-body">
                @await Html.PartialAsync("_AdminSidebarPartial")
            </div>
        </div>

        <!-- 4. MAIN CONTENT AREA -->
        <main class="admin-main-viewport d-flex flex-column">
            <div class="admin-content-container flex-grow-1">
                @RenderBody()
            </div>

            <footer class="py-4 border-top border-light bg-light">
                <div class="container-fluid text-center">
                    <p class="mb-0 small text-secondary">
                        &copy; @DateTime.UtcNow.Year MARBLIN LUXURY ADMIN
                    </p>
                </div>
            </footer>
        </main>
    </div>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

@model Marblin.Web.Areas.Admin.Models.DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="admin-header">
    <h1>Dashboard</h1>
    <span class="text-muted">@DateTime.Now.ToString("dddd, MMMM d, yyyy")</span>
</div>

<!-- Stats Row -->
<div class="row g-4 mb-4">
    <div class="col-md-3">
        <div class="stat-card accent">
            <div class="stat-value">@Model.TodayOrdersCount</div>
            <div class="stat-label">Orders Today</div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="stat-card success">
            <div class="stat-value">@Model.TodayRevenue.ToString("C0")</div>
            <div class="stat-label">Revenue Today</div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="stat-card info">
            <div class="stat-value">@Model.TodayDeposits.ToString("C0")</div>
            <div class="stat-label">Deposits Collected</div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="stat-card warning">
            <div class="stat-value">@Model.TotalActiveOrders</div>
            <div class="stat-label">Active Orders</div>
        </div>
    </div>
</div>

<!-- Orders by Status -->
<div class="row g-4 mb-4">
    <div class="col-md-8">
        <div class="stat-card">
            <h5 class="mb-3">Orders by Status</h5>
            <div class="row text-center">
                <div class="col">
                    <div class="display-6 text-warning">@Model.PendingDepositCount</div>
                    <small class="text-muted">Pending Deposit</small>
                </div>
                <div class="col">
                    <div class="display-6 text-primary">@Model.InProductionCount</div>
                    <small class="text-muted">In Production</small>
                </div>
                <div class="col">
                    <div class="display-6 text-info">@Model.AwaitingBalanceCount</div>
                    <small class="text-muted">Awaiting Balance</small>
                </div>
                <div class="col">
                    <div class="display-6 text-success">@Model.ShippedCount</div>
                    <small class="text-muted">Shipped</small>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="stat-card">
            <h5 class="mb-3">Alerts</h5>
            @if (Model.UnreviewedRequestsCount > 0)
            {
                <div class="alert alert-warning mb-2 py-2">
                    <strong>@Model.UnreviewedRequestsCount</strong> unreviewed custom requests
                </div>
            }
            @if (Model.LowStockCount > 0)
            {
                <div class="alert alert-danger mb-2 py-2">
                    <strong>@Model.LowStockCount</strong> products low in stock
                </div>
            }
            @if (Model.UnreviewedRequestsCount == 0 && Model.LowStockCount == 0)
            {
                <div class="alert alert-success mb-0 py-2">All clear! No alerts.</div>
            }
        </div>
    </div>
</div>

    </div>
</div>

<!-- Analytics Row -->
<div class="row g-4 mb-4">
    <div class="col-md-8">
        <div class="stat-card">
            <h5 class="mb-4">Revenue (Last 7 Days)</h5>
            <canvas id="revenueChart" height="100"></canvas>
        </div>
    </div>
    <div class="col-md-4">
        <div class="stat-card">
            <h5 class="mb-4">Top Selling Products</h5>
            @if(Model.TopSellingProducts.Any())
            {
                <ul class="list-group list-group-flush">
                    @foreach(var prod in Model.TopSellingProducts)
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-center bg-transparent px-0">
                            <div>
                                <span class="fw-bold d-block">@prod.ProductName</span>
                                <small class="text-muted">@prod.Revenue.ToString("C0") revenue</small>
                            </div>
                            <span class="badge bg-light text-dark rounded-pill border">@prod.UnitsSold sold</span>
                        </li>
                    }
                </ul>
            }
            else
            {
                <p class="text-muted">No sales yet.</p>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        const ctx = document.getElementById('revenueChart');
        new Chart(ctx, {
            type: 'line',
            data: {
                labels: @Html.Raw(Json.Serialize(Model.ChartLabels)),
                datasets: [{
                    label: 'Revenue',
                    data: @Html.Raw(Json.Serialize(Model.ChartData)),
                    borderColor: '#1a1a1a',
                    backgroundColor: 'rgba(26, 26, 26, 0.1)',
                    tension: 0.4,
                    fill: true
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: { display: false }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        grid: { borderDash: [2, 4] }
                    },
                    x: {
                        grid: { display: false }
                    }
                }
            }
        });
    </script>
}

<!-- Recent Orders -->
<div class="stat-card">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h5 class="mb-0">Recent Orders</h5>
        <a asp-action="Index" asp-controller="Orders" class="btn btn-sm btn-outline-dark">View All</a>
    </div>
    @if (Model.RecentOrders.Any())
    {
        <table class="table table-hover mb-0">
            <thead>
                <tr>
                    <th>Order #</th>
                    <th>Customer</th>
                    <th>Total</th>
                    <th>Status</th>
                    <th>Date</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model.RecentOrders)
                {
                    <tr>
                        <td><a asp-controller="Orders" asp-action="Details" asp-route-id="@order.Id">@order.OrderNumber</a></td>
                        <td>@order.CustomerName</td>
                        <td>@order.TotalAmount.ToString("C2")</td>
                        <td>
                            @switch (order.Status)
                            {
                                case Marblin.Core.Enums.OrderStatus.PendingDeposit:
                                    <span class="badge bg-warning text-dark">Pending Deposit</span>
                                    break;
                                case Marblin.Core.Enums.OrderStatus.InProduction:
                                    <span class="badge bg-primary">In Production</span>
                                    break;
                                case Marblin.Core.Enums.OrderStatus.AwaitingBalance:
                                    <span class="badge bg-info">Awaiting Balance</span>
                                    break;
                                case Marblin.Core.Enums.OrderStatus.Shipped:
                                    <span class="badge bg-success">Shipped</span>
                                    break;
                                default:
                                    <span class="badge bg-secondary">@order.Status</span>
                                    break;
                            }
                        </td>
                        <td>@order.CreatedAt.ToString("MMM d, h:mm tt")</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="text-muted mb-0">No orders yet.</p>
    }
</div>

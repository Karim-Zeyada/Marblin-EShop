@model Marblin.Web.Areas.Admin.Models.DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="d-flex flex-column flex-sm-row justify-content-between align-items-sm-center mb-5 gap-3">
    <h1 class="h2 admin-font-serif mb-0 text-dark">Dashboard</h1>
    <span class="text-secondary small text-uppercase ls-1">@DateTime.Now.ToString("dddd, MMMM d, yyyy")</span>
</div>

<!-- Stats Row -->
<div class="row g-4 mb-5">
    <div class="col-12 col-sm-6 col-xl-3">
        <div class="admin-luxury-card p-0 h-100">
            <div class="stat-item border-0">
                <span class="stat-value">@Model.TodayOrdersCount</span>
                <span class="stat-label">Orders Today</span>
            </div>
        </div>
    </div>
    <div class="col-12 col-sm-6 col-xl-3">
        <div class="admin-luxury-card p-0 h-100">
            <div class="stat-item border-0">
                <span class="stat-value text-dark">@Model.TodayRevenue.ToString("C0")</span>
                <span class="stat-label">Revenue Today</span>
            </div>
        </div>
    </div>
    <div class="col-12 col-sm-6 col-xl-3">
        <div class="admin-luxury-card p-0 h-100">
            <div class="stat-item border-0">
                <span class="stat-value text-secondary">@Model.TodayDeposits.ToString("C0")</span>
                <span class="stat-label">Deposits Collected</span>
            </div>
        </div>
    </div>
    <div class="col-12 col-sm-6 col-xl-3">
        <div class="admin-luxury-card p-0 h-100">
            <div class="stat-item border-0">
                <span class="stat-value">@Model.TotalActiveOrders</span>
                <span class="stat-label">Active Orders</span>
            </div>
        </div>
    </div>
</div>

<!-- Orders by Status & Alerts -->
<div class="row g-4 mb-5">
    <div class="col-12 col-lg-8">
        <div class="admin-luxury-card h-100">
            <h5 class="admin-font-serif mb-4 text-secondary small text-uppercase ls-1">Order Status Overview</h5>
            <div class="row text-center g-3">
                <div class="col-6 col-sm-3">
                    <div class="h2 admin-font-serif mb-1 text-dark">@Model.PendingDepositCount</div>
                    <div class="small text-secondary text-uppercase ls-1" style="font-size: 0.65rem;">Pending Deposit</div>
                </div>
                <div class="col-6 col-sm-3">
                    <div class="h2 admin-font-serif mb-1 text-dark">@Model.InProductionCount</div>
                    <div class="small text-secondary text-uppercase ls-1" style="font-size: 0.65rem;">In Production</div>
                </div>
                <div class="col-6 col-sm-3">
                    <div class="h2 admin-font-serif mb-1 text-dark">@Model.AwaitingBalanceCount</div>
                    <div class="small text-secondary text-uppercase ls-1" style="font-size: 0.65rem;">Awaiting Balance</div>
                </div>
                <div class="col-6 col-sm-3">
                    <div class="h2 admin-font-serif mb-1 text-dark">@Model.ShippedCount</div>
                    <div class="small text-secondary text-uppercase ls-1" style="font-size: 0.65rem;">Shipped</div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-12 col-lg-4">
        <div class="admin-luxury-card h-100">
            <h5 class="admin-font-serif mb-4 text-secondary small text-uppercase ls-1">System Alerts</h5>
            <div class="d-flex flex-column gap-3">
                @if (Model.UnreviewedRequestsCount > 0)
                {
                    <div class="d-flex align-items-center gap-3 p-3 bg-light border border-dark-10">
                        <i class="bi bi-exclamation-circle text-warning fs-4"></i>
                        <div>
                            <div class="fw-bold small text-dark">@Model.UnreviewedRequestsCount New Requests</div>
                            <a asp-action="Index" asp-controller="CustomRequests" class="small text-secondary text-decoration-none hover-dark">Review dashboard &rarr;</a>
                        </div>
                    </div>
                }
                @if (Model.LowStockCount > 0)
                {
                    <div class="d-flex align-items-center gap-3 p-3 bg-light border border-dark-10">
                        <i class="bi bi-box-seam text-danger fs-4"></i>
                        <div>
                            <div class="fw-bold small text-dark">@Model.LowStockCount Products Low Stock</div>
                            <a asp-action="Index" asp-controller="Products" class="small text-secondary text-decoration-none hover-dark">Manage inventory &rarr;</a>
                        </div>
                    </div>
                }
                @if (Model.UnreviewedRequestsCount == 0 && Model.LowStockCount == 0)
                {
                    <div class="text-center py-4">
                        <i class="bi bi-check2-circle text-success fs-1 mb-2 opacity-50"></i>
                        <p class="small text-secondary mb-0">No immediate actions required.</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Analytics & Top Products -->
<div class="row g-4 mb-5">
    <div class="col-12 col-lg-8">
        <div class="admin-luxury-card">
            <h5 class="admin-font-serif mb-4 text-secondary small text-uppercase ls-1">Revenue Performance</h5>
            <div style="height: 300px; width: 100%;">
                <canvas id="revenueChart"></canvas>
            </div>
        </div>
    </div>
    <div class="col-12 col-lg-4">
        <div class="admin-luxury-card h-100">
            <h5 class="admin-font-serif mb-4 text-secondary small text-uppercase ls-1">Top Selling</h5>
            @if (Model.TopSellingProducts.Any())
            {
                <div class="d-flex flex-column gap-4">
                    @foreach (var prod in Model.TopSellingProducts)
                    {
                        <div class="d-flex justify-content-between align-items-center pb-3 border-bottom border-light">
                            <div>
                                <span class="d-block mb-1 text-dark fw-bold">@prod.ProductName</span>
                                <span class="badge-luxury">@prod.UnitsSold Units</span>
                            </div>
                            <span class="admin-font-serif text-dark font-playfair">@prod.Revenue.ToString("C0")</span>
                        </div>
                    }
                </div>
            }
            else
            {
                <p class="text-secondary small">No recent sales data available.</p>
            }
        </div>
    </div>
</div>

<!-- Recent Orders -->
<div class="admin-luxury-card">
    <div class="d-flex flex-column flex-sm-row justify-content-between align-items-start align-items-sm-center mb-4 gap-3">
        <h5 class="admin-font-serif mb-0 text-secondary small text-uppercase ls-1">Recent Activity</h5>
        <a asp-action="Index" asp-controller="Orders" class="btn-luxury-outline btn-luxury-sm">View All Orders</a>
    </div>

    <div class="table-responsive">
        @if (Model.RecentOrders.Any())
        {
            <table class="table mb-0">
                <thead>
                    <tr>
                        <th>Order ID</th>
                        <th>Customer</th>
                        <th>Amount</th>
                        <th>Status</th>
                        <th>Timestamp</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model.RecentOrders)
                    {
                        <tr>
                            <td class="fw-bold ls-1">
                                <a asp-controller="Orders" asp-action="Details" asp-route-id="@order.Id" class="text-dark text-decoration-none hover-dark">
                                    #@order.OrderNumber
                                </a>
                            </td>
                            <td class="text-dark">@order.CustomerName</td>
                            <td class="admin-font-serif font-playfair text-dark">@order.TotalAmount.ToString("C2")</td>
                            <td>
                                <span class="badge-luxury">@order.Status</span>
                            </td>
                            <td class="text-secondary small">@order.CreatedAt.ToString("MMM d, h:mm tt")</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="text-center py-5">
                <p class="text-secondary mb-0">No orders found in recent history.</p>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        const ctx = document.getElementById('revenueChart');
        if(ctx) {
            new Chart(ctx, {
                type: 'line',
                data: {
                    labels: @Html.Raw(Json.Serialize(Model.ChartLabels)),
                    datasets: [{
                        label: 'Revenue',
                        data: @Html.Raw(Json.Serialize(Model.ChartData)),
                        borderColor: '#000000',
                        borderWidth: 2,
                        backgroundColor: 'rgba(0, 0, 0, 0.02)',
                        tension: 0.4,
                        fill: true,
                        pointBackgroundColor: '#000000',
                        pointBorderColor: '#fff',
                        pointHoverBackgroundColor: '#fff',
                        pointHoverBorderColor: '#000000',
                        pointRadius: 4
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: { display: false },
                        tooltip: {
                            backgroundColor: '#000',
                            borderColor: 'rgba(0,0,0,0.1)',
                            borderWidth: 1,
                            titleFont: { family: 'Inter', size: 12 },
                            bodyFont: { family: 'Inter', size: 12 },
                            padding: 12,
                            cornerRadius: 0,
                            displayColors: false
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            grid: { color: 'rgba(0,0,0,0.05)' },
                            ticks: {
                                color: 'rgba(0,0,0,0.5)',
                                font: { family: 'Inter', size: 10 },
                                callback: function(value) { return '$' + value; }
                            }
                        },
                        x: {
                            grid: { display: false },
                            ticks: {
                                color: 'rgba(0,0,0,0.5)',
                                font: { family: 'Inter', size: 10 }
                            }
                        }
                    }
                }
            });
        }
    </script>
}

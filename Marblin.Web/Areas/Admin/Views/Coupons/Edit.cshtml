@model Marblin.Core.Entities.Coupon

@{
    ViewData["Title"] = "Edit Coupon";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-gray-800">Edit Coupon</h1>
        <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
    </div>

    <div class="row">
        <div class="col-xl-6 col-lg-8">
            <div class="card shadow border-0">
                <div class="card-body p-4">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4"></div>
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="TimesUsed" />

                        <div class="mb-4">
                            <label asp-for="Code" class="form-label text-uppercase small fw-bold text-secondary">Coupon Code</label>
                            <input asp-for="Code" class="form-control form-control-lg text-uppercase" />
                            <span asp-validation-for="Code" class="text-danger small"></span>
                        </div>

                        <div class="row mb-4">
                            <div class="col-md-6">
                                <label asp-for="DiscountPercentage" class="form-label text-uppercase small fw-bold text-secondary">Discount Percentage (%)</label>
                                <div class="input-group">
                                    <input asp-for="DiscountPercentage" class="form-control" />
                                    <span class="input-group-text">%</span>
                                </div>
                                <span asp-validation-for="DiscountPercentage" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="DiscountAmount" class="form-label text-uppercase small fw-bold text-secondary">Discount Amount (Fixed)</label>
                                <div class="input-group">
                                    <span class="input-group-text">EGP</span>
                                    <input asp-for="DiscountAmount" class="form-control" />
                                </div>
                                <span asp-validation-for="DiscountAmount" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row mb-4">
                            <div class="col-md-6">
                                <label asp-for="ExpiryDate" class="form-label text-uppercase small fw-bold text-secondary">Expiry Date</label>
                                <input asp-for="ExpiryDate" type="date" class="form-control" />
                                <span asp-validation-for="ExpiryDate" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="UsageLimit" class="form-label text-uppercase small fw-bold text-secondary">Usage Limit</label>
                                <input asp-for="UsageLimit" class="form-control" />
                                <span asp-validation-for="UsageLimit" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label class="form-label text-uppercase small fw-bold text-secondary">Times Used</label>
                             <div class="form-control bg-light">@Model.TimesUsed</div>
                        </div>

                        <div class="form-check mb-4">
                            <input class="form-check-input" type="checkbox" asp-for="IsActive" />
                            <label class="form-check-label" asp-for="IsActive">
                                Active
                            </label>
                        </div>

                        <div class="d-grid gap-2">
                             <button type="submit" class="btn btn-dark btn-lg">Save Changes</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

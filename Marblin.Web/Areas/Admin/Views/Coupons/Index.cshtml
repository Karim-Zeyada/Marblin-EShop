@model IEnumerable<Marblin.Core.Entities.Coupon>

@{
    ViewData["Title"] = "Coupons";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-gray-800">Coupons</h1>
        <a asp-action="Create" class="btn btn-dark shadow-sm">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-lg me-2" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M8 2a.5.5 0 0 1 .5.5v5h5a.5.5 0 0 1 0 1h-5v5a.5.5 0 0 1-1 0v-5h-5a.5.5 0 0 1 0-1h5v-5A.5.5 0 0 1 8 2z"/>
            </svg>
            Create New Coupon
        </a>
    </div>

    <div class="card shadow border-0 mb-4">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light text-uppercase text-secondary small">
                        <tr>
                            <th class="px-4 border-0">Code</th>
                            <th class="border-0">Discount</th>
                            <th class="border-0">Expiry</th>
                            <th class="border-0">Status</th>
                            <th class="border-0">Usage</th>
                            <th class="border-0 text-end pe-4">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="px-4 fw-bold">@item.Code</td>
                                <td>
                                    @if(item.DiscountPercentage.HasValue)
                                    {
                                        <span class="badge bg-info text-dark">@item.DiscountPercentage% OFF</span>
                                    }
                                    @if(item.DiscountAmount.HasValue)
                                    {
                                         <span class="badge bg-success">@item.DiscountAmount?.ToString("C") OFF</span>
                                    }
                                </td>
                                <td>
                                    @if(item.ExpiryDate.HasValue)
                                    {
                                        @item.ExpiryDate.Value.ToString("MMM dd, yyyy")
                                        if(item.ExpiryDate < DateTime.UtcNow) { <span class="text-danger small">(Expired)</span> }
                                    }
                                    else
                                    {
                                        <span class="text-muted">No Expiry</span>
                                    }
                                </td>
                                <td>
                                    @if(item.IsActive)
                                    {
                                        <span class="badge bg-success-subtle text-success border border-success-subtle rounded-pill">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary-subtle text-secondary border border-secondary-subtle rounded-pill">Inactive</span>
                                    }
                                </td>
                                <td>
                                    @item.TimesUsed @if(item.UsageLimit.HasValue) { <span class="text-muted">/ @item.UsageLimit</span> }
                                </td>
                                <td class="text-end pe-4">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-dark me-2">Edit</a>
                                    <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this coupon?');">
                                        <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <p class="text-muted mb-0">No coupons found.</p>
                </div>
            }
        </div>
    </div>
</div>

@model Marblin.Web.Areas.Admin.Models.ProductCreateViewModel
@{
    ViewData["Title"] = "Create Product";
}

<div class="admin-header">
    <h1>Create Product</h1>
    <a asp-action="Index" class="btn btn-outline-dark">‚Üê Back to Products</a>
</div>

<div class="stat-card" style="max-width: 700px;">
    <form asp-action="Create" method="post">
        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
        
        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label"></label>
            <textarea asp-for="Description" class="form-control" rows="4"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="BasePrice" class="form-label"></label>
                <div class="input-group">
                    <span class="input-group-text">$</span>
                    <input asp-for="BasePrice" class="form-control" type="number" step="0.01" />
                </div>
                <span asp-validation-for="BasePrice" class="text-danger"></span>
            </div>
            <div class="col-md-6 mb-3">
                <label asp-for="CategoryId" class="form-label"></label>
                <select asp-for="CategoryId" asp-items="@ViewBag.Categories" class="form-select">
                    <option value="">-- Select Category --</option>
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="Availability" class="form-label"></label>
                <select asp-for="Availability" asp-items="Html.GetEnumSelectList<Marblin.Core.Enums.ProductAvailability>()" class="form-select"></select>
            </div>
            <div class="col-md-6 mb-3 d-flex align-items-end">
                <div class="form-check">
                    <input asp-for="IsSignaturePiece" class="form-check-input" />
                    <label asp-for="IsSignaturePiece" class="form-check-label">Feature as Signature Piece</label>
                </div>
            </div>
        </div>

        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-dark">Create Product</button>
            <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

@model List<Marblin.Core.Entities.Product>
@{
    ViewData["Title"] = "Products";
}

<div class="d-flex flex-column flex-sm-row justify-content-between align-items-sm-center mb-5 gap-3">
    <h1 class="h2 admin-font-serif mb-0 text-dark">Products</h1>
    <a asp-action="Create" class="btn-luxury-outline">
        <i class="bi bi-plus-lg"></i> Add Product
    </a>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert badge-luxury w-100 mb-4 py-3 border-dark-10 text-dark d-flex justify-content-between align-items-center" role="alert">
        <span><i class="bi bi-check2-circle me-2"></i> @TempData["Success"]</span>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
@if (TempData["Error"] != null)
{
    <div class="alert badge-luxury w-100 mb-4 py-3 border-danger text-danger d-flex justify-content-between align-items-center" role="alert">
        <span><i class="bi bi-exclamation-triangle me-2"></i> @TempData["Error"]</span>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Filters Section -->
<div class="admin-luxury-card mb-4">
    <form method="get" class="row g-4 align-items-end">
        <div class="col-12 col-sm-6 col-lg-4">
            <label class="form-label-luxury">Search Catalog</label>
            <input type="text" name="search" class="form-control form-luxury" placeholder="Product name or SKU..." value="@ViewBag.Search" />
        </div>
        <div class="col-12 col-sm-6 col-lg-3">
            <label class="form-label-luxury">Category</label>
            <select name="categoryId" class="form-select form-luxury">
                <option value="">All Categories</option>
                @if (ViewBag.Categories is List<Marblin.Core.Entities.Category> categories)
                {
                    foreach (var cat in categories)
                    {
                        <option value="@cat.Id" selected="@(ViewBag.CategoryId != null && ViewBag.CategoryId == cat.Id)">@cat.Name</option>
                    }
                }
            </select>
        </div>
        <div class="col-12 col-sm-6 col-lg-3">
            <label class="form-label-luxury">Availability</label>
            <select name="availability" class="form-select form-luxury">
                <option value="">All Statuses</option>
                @foreach (var status in Enum.GetValues<Marblin.Core.Enums.ProductAvailability>())
                {
                    <option value="@status" selected="@(ViewBag.Availability != null && ViewBag.Availability == status)">@status</option>
                }
            </select>
        </div>
        <div class="col-12 col-lg-2">
            <button type="submit" class="btn-luxury-outline w-100 justify-content-center">
                <i class="bi bi-filter"></i> Apply
            </button>
        </div>
    </form>
</div>

<!-- Products Table -->
<div class="admin-luxury-card p-0 overflow-hidden">
    @if (Model.Any())
    {
        <div class="table-responsive">
            <table class="table mb-0">
                <thead>
                    <tr>
                        <th style="width: 80px;" class="ps-4">Preview</th>
                        <th>Product Details</th>
                        <th>Category</th>
                        <th>Base Price</th>
                        <th>Inventory</th>
                        <th>Status</th>
                        <th style="width: 150px;" class="pe-4 text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model)
                    {
                        var primaryImage = product.Images.FirstOrDefault(i => i.IsPrimary) ?? product.Images.FirstOrDefault();
                        <tr>
                            <td class="ps-4">
                                @if (primaryImage != null)
                                {
                                    <div class="bg-light p-1 border border-dark-10" style="width: 50px; height: 50px;">
                                        <img src="@primaryImage.ImageUrl" alt="@product.Name" style="width: 100%; height: 100%; object-fit: cover;" />
                                    </div>
                                }
                                else
                                {
                                    <div class="bg-light border border-dark-10 d-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
                                        <i class="bi bi-image text-muted"></i>
                                    </div>
                                }
                            </td>
                            <td>
                                <div class="fw-bold text-dark mb-1">@product.Name</div>
                                <div class="d-flex gap-2">
                                    @if (product.IsSignaturePiece)
                                    {
                                        <span class="badge-luxury py-0" style="font-size: 0.6rem; background: #FFF9C4; border-color: #FBC02D;">Signature</span>
                                    }
                                    @if (!product.IsActive)
                                    {
                                        <span class="badge-luxury py-0" style="font-size: 0.6rem;">Hidden</span>
                                    }
                                </div>
                            </td>
                            <td><span class="text-secondary">@product.Category?.Name</span></td>
                            <td>
                                @if (product.IsOnSale())
                                {
                                    <div class="d-flex align-items-center gap-2">
                                        <span class="admin-font-serif font-playfair text-dark fw-bold">@product.GetActivePrice().ToString("C2")</span>
                                        <span class="text-muted text-decoration-line-through small">@product.BasePrice.ToString("C2")</span>
                                    </div>
                                    <span class="badge bg-success bg-opacity-10 text-success rounded-0 mt-1" style="font-size: 0.6rem;">
                                        <i class="bi bi-tag-fill me-1"></i>@product.GetDiscountPercentage()% OFF
                                    </span>
                                }
                                else
                                {
                                    <span class="admin-font-serif font-playfair text-dark">@product.BasePrice.ToString("C2")</span>
                                }
                            </td>
                            <td>
                                @{
                                    var stock = product.Stock;
                                }
                                <div>
                                    @if (stock == 0)
                                    {
                                        <span class="badge bg-danger bg-opacity-10 text-danger rounded-0" style="font-size: 0.6rem;"><i class="bi bi-x-circle me-1"></i>Out of Stock</span>
                                    }
                                    else if (stock <= 5)
                                    {
                                        <span class="badge bg-warning bg-opacity-10 text-warning rounded-0" style="font-size: 0.6rem;"><i class="bi bi-exclamation-triangle me-1"></i>Low Stock (@stock)</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted" style="font-size: 0.8rem;">@stock units</span>
                                    }
                                </div>
                                @if (!string.IsNullOrEmpty(product.SKU))
                                {
                                    <div class="text-muted small" style="font-size: 0.65rem;">SKU: @product.SKU</div>
                                }
                            </td>
                            <td>
                                @switch (product.Availability)
                                {
                                    case Marblin.Core.Enums.ProductAvailability.InStock:
                                        <span class="text-success small fw-bold"><i class="bi bi-check-circle-fill me-1"></i> In Stock</span>
                                        break;
                                    case Marblin.Core.Enums.ProductAvailability.MadeToOrder:
                                        <span class="text-info small fw-bold"><i class="bi bi-hammer me-1"></i> Made to Order</span>
                                        break;
                                    case Marblin.Core.Enums.ProductAvailability.OutOfStock:
                                        <span class="text-danger small fw-bold"><i class="bi bi-x-circle-fill me-1"></i> Out of Stock</span>
                                        break;
                                }
                            </td>
                            <td class="pe-4 text-end">
                                <div class="d-flex justify-content-end gap-2">
                                    <a asp-action="Edit" asp-route-id="@product.Id" class="btn-luxury-outline btn-luxury-sm" title="Edit Product">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <form asp-action="Delete" asp-route-id="@product.Id" method="post" class="d-inline" onsubmit="return confirm('Archive this piece?');">
                                        <button type="submit" class="btn-luxury-outline btn-luxury-sm text-danger border-danger" title="Delete Product">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="bi bi-box-seam h1 opacity-10 mb-3 d-block"></i>
            <p class="text-secondary mb-0">No products match your criteria.</p>
            <a asp-action="Create" class="text-dark small text-decoration-none border-bottom border-dark mt-2 d-inline-block">Add your first product &rarr;</a>
        </div>
    }
</div>

@* Pagination Controls *@
@if (Model is Marblin.Core.Common.PaginatedList<Marblin.Core.Entities.Product> paginatedProducts && paginatedProducts.TotalPages > 1)
{
    <div class="d-flex justify-content-between align-items-center mt-4">
        <div class="text-secondary small">
            Showing page @paginatedProducts.PageIndex of @paginatedProducts.TotalPages (@paginatedProducts.TotalCount total products)
        </div>
        <nav aria-label="Product pagination">
            <ul class="pagination pagination-sm mb-0">
                <li class="page-item @(!paginatedProducts.HasPreviousPage ? "disabled" : "")">
                    <a class="page-link" href="?page=@(paginatedProducts.PageIndex - 1)&search=@ViewBag.Search&categoryId=@ViewBag.CategoryId&availability=@ViewBag.Availability">
                        <i class="bi bi-chevron-left"></i> Previous
                    </a>
                </li>

                @{
                    int startPage = Math.Max(1, paginatedProducts.PageIndex - 2);
                    int endPage = Math.Min(paginatedProducts.TotalPages, paginatedProducts.PageIndex + 2);
                }

                @if (startPage > 1)
                {
                    <li class="page-item"><a class="page-link" href="?page=1&search=@ViewBag.Search&categoryId=@ViewBag.CategoryId&availability=@ViewBag.Availability">1</a></li>
                    @if (startPage > 2)
                    {
                        <li class="page-item disabled"><span class="page-link">...</span></li>
                    }
                }

                @for (int i = startPage; i <= endPage; i++)
                {
                    <li class="page-item @(i == paginatedProducts.PageIndex ? "active" : "")">
                        <a class="page-link" href="?page=@i&search=@ViewBag.Search&categoryId=@ViewBag.CategoryId&availability=@ViewBag.Availability">@i</a>
                    </li>
                }

                @if (endPage < paginatedProducts.TotalPages)
                {
                    @if (endPage < paginatedProducts.TotalPages - 1)
                    {
                        <li class="page-item disabled"><span class="page-link">...</span></li>
                    }
                    <li class="page-item"><a class="page-link" href="?page=@paginatedProducts.TotalPages&search=@ViewBag.Search&categoryId=@ViewBag.CategoryId&availability=@ViewBag.Availability">@paginatedProducts.TotalPages</a></li>
                }

                <li class="page-item @(!paginatedProducts.HasNextPage ? "disabled" : "")">
                    <a class="page-link" href="?page=@(paginatedProducts.PageIndex + 1)&search=@ViewBag.Search&categoryId=@ViewBag.CategoryId&availability=@ViewBag.Availability">
                        Next <i class="bi bi-chevron-right"></i>
                    </a>
                </li>
            </ul>
        </nav>
    </div>
}
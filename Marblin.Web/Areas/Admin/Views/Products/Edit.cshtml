@model Marblin.Web.Areas.Admin.Models.ProductEditViewModel
@{
    ViewData["Title"] = "Edit Product";
}

<div class="d-flex flex-column flex-sm-row justify-content-between align-items-sm-center mb-5 gap-3">
    <h1 class="h2 admin-font-serif mb-0 text-dark">Modify Piece</h1>
    <a asp-action="Index" class="btn-luxury-outline btn-luxury-sm">
        <i class="bi bi-arrow-left"></i> Back to Catalog
    </a>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert badge-luxury w-100 mb-4 py-3 border-dark-10 text-dark d-flex justify-content-between align-items-center" role="alert">
        <span><i class="bi bi-check2-circle me-2 text-success"></i> @TempData["Success"]</span>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
@if (TempData["Error"] != null)
{
    <div class="alert badge-luxury w-100 mb-4 py-3 border-danger text-danger d-flex justify-content-between align-items-center" role="alert">
        <span><i class="bi bi-exclamation-triangle me-2"></i> @TempData["Error"]</span>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="row g-5">
    <!-- Left Column: Details & Variants -->
    <div class="col-12 col-xl-7">
        <!-- Main Details -->
        <div class="admin-luxury-card mb-5">
            <h5 class="admin-font-serif mb-4 text-secondary small text-uppercase ls-1">Core Specifications</h5>
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Id" />
                <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div>

                <div class="mb-4">
                    <label asp-for="Name" class="form-label-luxury">Piece Nomenclature</label>
                    <input asp-for="Name" class="form-control form-luxury" />
                    <span asp-validation-for="Name" class="text-danger small"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Description" class="form-label-luxury">Craftsmanship Narrative</label>
                    <textarea asp-for="Description" class="form-control form-luxury" rows="6"></textarea>
                </div>

                <div class="row g-4 mb-4">
                    <div class="col-12 col-sm-6">
                        <label asp-for="BasePrice" class="form-label-luxury">Base Valuation (USD)</label>
                        <div class="input-group">
                            <span class="input-group-text bg-transparent border-0 border-bottom border-light text-secondary">$</span>
                            <input asp-for="BasePrice" class="form-control form-luxury" type="number" step="0.01" min="0.01" />
                        </div>
                    </div>
                    <div class="col-12 col-sm-6">
                        <label asp-for="CategoryId" class="form-label-luxury">Curation Collection</label>
                        <select asp-for="CategoryId" asp-items="@ViewBag.Categories" class="form-select form-luxury"></select>
                    </div>
                </div>

                <div class="row g-4 mb-5">
                    <div class="col-12 col-sm-6">
                        <label asp-for="Availability" class="form-label-luxury">Inventory Disposition</label>
                        <select asp-for="Availability" asp-items="Html.GetEnumSelectList<Marblin.Core.Enums.ProductAvailability>()" class="form-select form-luxury"></select>
                    </div>
                    <div class="col-12 col-sm-6">
                        <div class="d-flex flex-column gap-2 mt-2">
                            <div class="form-check">
                                <input asp-for="IsSignaturePiece" class="form-check-input border-dark" />
                                <label asp-for="IsSignaturePiece" class="form-check-label text-secondary small ls-1 fw-bold">SIGNATURE PIECE</label>
                            </div>
                            <div class="form-check">
                                <input asp-for="IsActive" class="form-check-input border-dark" />
                                <label asp-for="IsActive" class="form-check-label text-secondary small ls-1 fw-bold">PUBLIC VISIBILITY</label>
                            </div>
                        </div>
                </div>
            </div>

                <!-- Sale Pricing Section -->
                <h5 class="admin-font-serif mb-4 text-secondary small text-uppercase ls-1 mt-5 pt-4 border-top">Sale Pricing</h5>
                
                <div class="row g-4 mb-4">
                    <div class="col-12 col-sm-6">
                        <label asp-for="SalePrice" class="form-label-luxury">Sale Price (USD)</label>
                        <div class="input-group">
                            <span class="input-group-text bg-transparent border-0 border-bottom border-light text-secondary">$</span>
                            <input asp-for="SalePrice" class="form-control form-luxury" type="number" step="0.01" min="0.01" placeholder="Leave empty for no sale" />
                        </div>
                        <span asp-validation-for="SalePrice" class="text-danger small"></span>
                    </div>
                    <div class="col-12 col-sm-6">
                        <div class="form-check mt-4">
                            <input asp-for="IsFeaturedSale" class="form-check-input border-dark" />
                            <label asp-for="IsFeaturedSale" class="form-check-label text-secondary small ls-1 fw-bold">FEATURED SALE</label>
                        </div>
                    </div>
                </div>

                <div class="row g-4 mb-5">
                    <div class="col-12 col-sm-6">
                        <label asp-for="SaleStartDate" class="form-label-luxury">Sale Start Date</label>
                        <input asp-for="SaleStartDate" type="datetime-local" class="form-control form-luxury" />
                    </div>
                    <div class="col-12 col-sm-6">
                        <label asp-for="SaleEndDate" class="form-label-luxury">Sale End Date</label>
                        <input asp-for="SaleEndDate" type="datetime-local" class="form-control form-luxury" />
                    </div>
                </div>

                <button type="submit" class="btn-luxury-outline">
                    <i class="bi bi-save"></i> Commit Changes
                </button>
            </form>
        </div>

        <!-- Variants -->
        <div class="admin-luxury-card">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h5 class="admin-font-serif mb-0 text-secondary small text-uppercase ls-1">Product Variants</h5>
                <span class="badge bg-dark rounded-0 px-3 py-2">@Model.Variants.Count variant@(Model.Variants.Count != 1 ? "s" : "")</span>
            </div>
            
            <p class="text-muted small mb-4" style="line-height: 1.6;">
                <i class="bi bi-info-circle me-1"></i>
                Each variant represents a specific <strong>material &amp; size</strong> combination. 
                The <strong>Price Adjustment</strong> adds to (or subtracts from) the base price. 
                Set a <strong>Sale Price</strong> to override the calculated price during an active product sale.
            </p>

            <div class="table-responsive mb-4">
                @if (Model.Variants.Any())
                {
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th class="text-uppercase small ls-1 fw-bold text-secondary" style="font-size: 0.7rem;">Material</th>
                                <th class="text-uppercase small ls-1 fw-bold text-secondary" style="font-size: 0.7rem;">Size</th>
                                <th class="text-uppercase small ls-1 fw-bold text-secondary" style="font-size: 0.7rem;">Adjustment</th>
                                <th class="text-uppercase small ls-1 fw-bold text-secondary" style="font-size: 0.7rem;">Final Price</th>
                                <th class="text-uppercase small ls-1 fw-bold text-secondary" style="font-size: 0.7rem;">Sale Price</th>
                                <th class="text-uppercase small ls-1 fw-bold text-secondary text-center" style="font-size: 0.7rem;">Stock</th>
                                <th class="text-uppercase small ls-1 fw-bold text-secondary" style="font-size: 0.7rem;">SKU</th>
                                <th class="text-end" style="width: 40px;"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var v in Model.Variants)
                            {
                                var finalPrice = v.GetFinalPrice(Model.BasePrice);
                                <tr>
                                    <td class="text-dark fw-bold">@v.Material</td>
                                    <td class="text-dark">@v.Size</td>
                                    <td>
                                        @if (v.PriceAdjustment > 0)
                                        {
                                            <span class="admin-font-serif text-success fw-bold">+@v.PriceAdjustment.ToString("C0")</span>
                                        }
                                        else if (v.PriceAdjustment < 0)
                                        {
                                            <span class="admin-font-serif text-danger fw-bold">@v.PriceAdjustment.ToString("C0")</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">—</span>
                                        }
                                    </td>
                                    <td class="admin-font-serif text-dark fw-bold">@finalPrice.ToString("C0")</td>
                                    <td>
                                        @if (v.SalePrice.HasValue)
                                        {
                                            <div class="d-flex align-items-center gap-2">
                                                <span class="admin-font-serif fw-bold text-success">@v.SalePrice.Value.ToString("C0")</span>
                                                <span class="text-muted text-decoration-line-through small">@finalPrice.ToString("C0")</span>
                                            </div>
                                            <span class="badge bg-success bg-opacity-10 text-success rounded-0 mt-1" style="font-size: 0.65rem;">
                                                <i class="bi bi-tag-fill me-1"></i>SALE
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-muted small">No sale set</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        @if (v.Stock <= 3 && v.Stock > 0)
                                        {
                                            <span class="badge bg-warning bg-opacity-10 text-warning rounded-0 px-2 py-1">
                                                <i class="bi bi-exclamation-triangle me-1"></i>@v.Stock left
                                            </span>
                                        }
                                        else if (v.Stock == 0)
                                        {
                                            <span class="badge bg-danger bg-opacity-10 text-danger rounded-0 px-2 py-1">
                                                <i class="bi bi-x-circle me-1"></i>Out of stock
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-dark bg-opacity-10 text-dark rounded-0 px-2 py-1">
                                                @v.Stock in stock
                                            </span>
                                        }
                                    </td>
                                    <td><code class="text-secondary small">@(v.SKU ?? "—")</code></td>
                                    <td class="text-end">
                                        <form asp-action="DeleteVariant" method="post" class="d-inline">
                                            <input type="hidden" name="id" value="@v.Id" />
                                            <input type="hidden" name="productId" value="@Model.Id" />
                                            <button type="submit" class="btn btn-sm btn-link text-muted p-0 hover-dark" onclick="return confirm('Remove this variant?');" title="Delete variant">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="text-center py-5 border bg-light bg-opacity-50">
                        <i class="bi bi-boxes text-secondary d-block mb-2" style="font-size: 2rem;"></i>
                        <p class="text-secondary small mb-0">No variants defined yet. Add material &amp; size combinations below.</p>
                    </div>
                }
            </div>

            <!-- Add Variant Form -->
            <div class="bg-light p-4 border border-light">
                <h6 class="small text-uppercase ls-1 mb-4 text-dark fw-bold">
                    <i class="bi bi-plus-circle me-1"></i> Add New Variant
                </h6>
                <form asp-action="AddVariant" method="post">
                    <input type="hidden" name="productId" value="@Model.Id" />
                    
                    <div class="row g-3 mb-3">
                        <div class="col-12 col-sm-6">
                            <label class="form-label-luxury">Material</label>
                            <input type="text" name="material" class="form-control form-luxury m-0" placeholder="e.g. Black Marble" required />
                        </div>
                        <div class="col-12 col-sm-6">
                            <label class="form-label-luxury">Size</label>
                            <input type="text" name="size" class="form-control form-luxury m-0" placeholder="e.g. 60x120cm" required />
                        </div>
                    </div>
                    
                    <div class="row g-3 mb-3">
                        <div class="col-12 col-sm-6 col-md-3">
                            <label class="form-label-luxury">Price Adjustment</label>
                            <div class="input-group">
                                <span class="input-group-text bg-transparent border-0 border-bottom border-light text-secondary" style="font-size: 0.8rem;">+/−$</span>
                                <input type="number" step="0.01" name="priceAdjustment" class="form-control form-luxury m-0" placeholder="0" value="0" />
                            </div>
                            <small class="text-muted" style="font-size: 0.7rem;">Added to base price (@Model.BasePrice.ToString("C0"))</small>
                        </div>
                        <div class="col-12 col-sm-6 col-md-3">
                            <label class="form-label-luxury">Sale Price <span class="text-muted fw-normal">(optional)</span></label>
                            <div class="input-group">
                                <span class="input-group-text bg-transparent border-0 border-bottom border-light text-secondary">$</span>
                                <input type="number" step="0.01" name="salePrice" class="form-control form-luxury m-0" placeholder="Leave empty" min="0.01" />
                            </div>
                            <small class="text-muted" style="font-size: 0.7rem;">Overrides final price during active sale</small>
                        </div>
                        <div class="col-12 col-sm-6 col-md-3">
                            <label class="form-label-luxury">Stock</label>
                            <input type="number" name="stock" class="form-control form-luxury m-0" placeholder="0" value="0" min="0" />
                        </div>
                        <div class="col-12 col-sm-6 col-md-3">
                            <label class="form-label-luxury">SKU <span class="text-muted fw-normal">(optional)</span></label>
                            <input type="text" name="sku" class="form-control form-luxury m-0" placeholder="e.g. BM-60x120" />
                        </div>
                    </div>
                    
                    <button type="submit" class="btn-luxury-outline btn-luxury-sm w-100 justify-content-center mt-2">
                        <i class="bi bi-plus-lg me-1"></i> Add Variant
                    </button>
                </form>
            </div>
        </div>
    </div>

    <!-- Right Column: Imagery -->
    <div class="col-12 col-xl-5">
        <div class="admin-luxury-card sticky-top" style="top: 100px;">
            <h5 class="admin-font-serif mb-4 text-secondary small text-uppercase ls-1">Imagery Portfolio</h5>

            <div class="row g-3 mb-5">
                @foreach (var img in Model.Images)
                {
                    <div class="col-6">
                        <div class="bg-light border border-light position-relative">
                            <img src="@img.ImageUrl" alt="@img.AltText" style="width: 100%; aspect-ratio: 1; object-fit: cover;" />

                            @if (img.IsPrimary)
                            {
                                <div class="position-absolute top-0 start-0 m-2">
                                    <span class="badge-luxury" style="font-size: 0.55rem; background: #000; color: #fff; border: none;">Primary</span>
                                </div>
                            }

                            <div class="position-absolute top-0 end-0 m-2">
                                <form asp-action="DeleteImage" method="post">
                                    <input type="hidden" name="id" value="@img.Id" />
                                    <input type="hidden" name="productId" value="@Model.Id" />
                                    <button type="submit" class="btn btn-sm btn-dark p-1 lh-1 border-0" onclick="return confirm('Remove image?');">
                                        <i class="bi bi-x fs-5"></i>
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <div class="bg-light p-4 border border-light">
                <h6 class="small text-uppercase ls-1 mb-4 text-dark fw-bold">Upload New Visual</h6>
                <form asp-action="UploadImage" method="post" enctype="multipart/form-data">
                    <input type="hidden" name="productId" value="@Model.Id" />
                    <div class="mb-3">
                        <label class="form-label-luxury">Select File</label>
                        <input type="file" name="image" class="form-control form-luxury pb-2" accept="image/*" required />
                    </div>
                    <div class="mb-4">
                        <label class="form-label-luxury">Alt Text</label>
                        <input type="text" name="altText" class="form-control form-luxury" placeholder="Accessibility description" />
                    </div>
                    <div class="form-check mb-4">
                        <input type="checkbox" name="isPrimary" value="true" class="form-check-input border-dark" id="isPrimary" />
                        <label class="form-check-label text-secondary small ls-1 fw-bold" for="isPrimary">SET AS PRIMARY EXHIBIT</label>
                    </div>
                    <button type="submit" class="btn-luxury-outline w-100 justify-content-center">
                        <i class="bi bi-upload"></i> Upload to Gallery
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
@model Marblin.Web.Areas.Admin.Models.ProductEditViewModel
@{
    ViewData["Title"] = "Edit Product";
}

<div class="d-flex flex-column flex-sm-row justify-content-between align-items-sm-center mb-5 gap-3">
    <h1 class="h2 admin-font-serif mb-0 text-dark">Modify Piece</h1>
    <a asp-action="Index" class="btn-luxury-outline btn-luxury-sm">
        <i class="bi bi-arrow-left"></i> Back to Catalog
    </a>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert badge-luxury w-100 mb-4 py-3 border-dark-10 text-dark d-flex justify-content-between align-items-center" role="alert">
        <span><i class="bi bi-check2-circle me-2 text-success"></i> @TempData["Success"]</span>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
@if (TempData["Error"] != null)
{
    <div class="alert badge-luxury w-100 mb-4 py-3 border-danger text-danger d-flex justify-content-between align-items-center" role="alert">
        <span><i class="bi bi-exclamation-triangle me-2"></i> @TempData["Error"]</span>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="row g-5">
    <!-- Left Column: Details & Variants -->
    <div class="col-12 col-xl-7">
        <!-- Main Details -->
        <div class="admin-luxury-card mb-5">
            <h5 class="admin-font-serif mb-4 text-secondary small text-uppercase ls-1">Core Specifications</h5>
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Id" />
                <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div>

                <div class="mb-4">
                    <label asp-for="Name" class="form-label-luxury">Piece Nomenclature</label>
                    <input asp-for="Name" class="form-control form-luxury" />
                    <span asp-validation-for="Name" class="text-danger small"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Description" class="form-label-luxury">Craftsmanship Narrative</label>
                    <textarea asp-for="Description" class="form-control form-luxury" rows="6"></textarea>
                </div>

                <div class="row g-4 mb-4">
                    <div class="col-12 col-sm-6">
                        <label asp-for="BasePrice" class="form-label-luxury">Base Valuation (USD)</label>
                        <div class="input-group">
                            <span class="input-group-text bg-transparent border-0 border-bottom border-light text-secondary">$</span>
                            <input asp-for="BasePrice" class="form-control form-luxury" type="number" step="0.01" />
                        </div>
                    </div>
                    <div class="col-12 col-sm-6">
                        <label asp-for="CategoryId" class="form-label-luxury">Curation Collection</label>
                        <select asp-for="CategoryId" asp-items="@ViewBag.Categories" class="form-select form-luxury"></select>
                    </div>
                </div>

                <div class="row g-4 mb-5">
                    <div class="col-12 col-sm-6">
                        <label asp-for="Availability" class="form-label-luxury">Inventory Disposition</label>
                        <select asp-for="Availability" asp-items="Html.GetEnumSelectList<Marblin.Core.Enums.ProductAvailability>()" class="form-select form-luxury"></select>
                    </div>
                    <div class="col-12 col-sm-6">
                        <div class="d-flex flex-column gap-2 mt-2">
                            <div class="form-check">
                                <input asp-for="IsSignaturePiece" class="form-check-input border-dark" />
                                <label asp-for="IsSignaturePiece" class="form-check-label text-secondary small ls-1 fw-bold">SIGNATURE PIECE</label>
                            </div>
                            <div class="form-check">
                                <input asp-for="IsActive" class="form-check-input border-dark" />
                                <label asp-for="IsActive" class="form-check-label text-secondary small ls-1 fw-bold">PUBLIC VISIBILITY</label>
                            </div>
                        </div>
                    </div>
                </div>

                <button type="submit" class="btn-luxury-outline">
                    <i class="bi bi-save"></i> Commit Changes
                </button>
            </form>
        </div>

        <!-- Variants -->
        <div class="admin-luxury-card">
            <h5 class="admin-font-serif mb-4 text-secondary small text-uppercase ls-1">Artisan Variants</h5>

            <div class="table-responsive mb-4">
                @if (Model.Variants.Any())
                {
                    <table class="table mb-0">
                        <thead>
                            <tr>
                                <th>Material</th>
                                <th>Size</th>
                                <th>Adjustment</th>
                                <th>Stock</th>
                                <th>SKU</th>
                                <th class="text-end"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var v in Model.Variants)
                            {
                                <tr>
                                    <td class="text-dark fw-bold">@v.Material</td>
                                    <td class="text-dark">@v.Size</td>
                                    <td class="admin-font-serif text-dark fw-bold">@(v.PriceAdjustment >= 0 ? "+" : "")@v.PriceAdjustment.ToString("C0")</td>
                                    <td>
                                        @if (v.Stock <= 3 && v.Stock > 0)
                                        {
                                            <span class="text-warning small fw-bold"><i class="bi bi-exclamation-triangle"></i> @v.Stock</span>
                                        }
                                        else if (v.Stock == 0)
                                        {
                                            <span class="text-danger small fw-bold"><i class="bi bi-x-circle"></i> Out</span>
                                        }
                                        else
                                        {
                                            <span class="text-secondary">@v.Stock</span>
                                        }
                                    </td>
                                    <td><code class="text-secondary small">@v.SKU</code></td>
                                    <td class="text-end">
                                        <form asp-action="DeleteVariant" method="post" class="d-inline">
                                            <input type="hidden" name="id" value="@v.Id" />
                                            <input type="hidden" name="productId" value="@Model.Id" />
                                            <button type="submit" class="btn btn-sm btn-link text-muted p-0 hover-dark" onclick="return confirm('Remove this variant?');">
                                                <i class="bi bi-x-lg"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p class="text-secondary small py-4 text-center border">No variations defined for this piece.</p>
                }
            </div>

            <div class="bg-light p-4 border border-light">
                <h6 class="small text-uppercase ls-1 mb-3 text-dark fw-bold">Add Variation</h6>
                <form asp-action="AddVariant" method="post" class="row g-3">
                    <input type="hidden" name="productId" value="@Model.Id" />
                    <div class="col-12 col-sm-6 col-md-3">
                        <input type="text" name="material" class="form-control form-luxury m-0" placeholder="Material" required />
                    </div>
                    <div class="col-12 col-sm-6 col-md-3">
                        <input type="text" name="size" class="form-control form-luxury m-0" placeholder="Size" required />
                    </div>
                    <div class="col-12 col-sm-6 col-md-2">
                        <input type="number" step="0.01" name="priceAdjustment" class="form-control form-luxury m-0" placeholder="+/- Price" value="0" />
                    </div>
                    <div class="col-12 col-sm-6 col-md-2">
                        <input type="number" name="stock" class="form-control form-luxury m-0" placeholder="Stock" value="0" />
                    </div>
                    <div class="col-12 col-sm-6 col-md-2">
                        <input type="text" name="sku" class="form-control form-luxury m-0" placeholder="SKU" />
                    </div>
                    <div class="col-12">
                        <button type="submit" class="btn-luxury-outline btn-luxury-sm w-100 justify-content-center">Add Variant</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Right Column: Imagery -->
    <div class="col-12 col-xl-5">
        <div class="admin-luxury-card sticky-top" style="top: 100px;">
            <h5 class="admin-font-serif mb-4 text-secondary small text-uppercase ls-1">Imagery Portfolio</h5>

            <div class="row g-3 mb-5">
                @foreach (var img in Model.Images)
                {
                    <div class="col-6">
                        <div class="bg-light border border-light position-relative">
                            <img src="@img.ImageUrl" alt="@img.AltText" style="width: 100%; aspect-ratio: 1; object-fit: cover;" />

                            @if (img.IsPrimary)
                            {
                                <div class="position-absolute top-0 start-0 m-2">
                                    <span class="badge-luxury" style="font-size: 0.55rem; background: #000; color: #fff; border: none;">Primary</span>
                                </div>
                            }

                            <div class="position-absolute top-0 end-0 m-2">
                                <form asp-action="DeleteImage" method="post">
                                    <input type="hidden" name="id" value="@img.Id" />
                                    <input type="hidden" name="productId" value="@Model.Id" />
                                    <button type="submit" class="btn btn-sm btn-dark p-1 lh-1 border-0" onclick="return confirm('Remove image?');">
                                        <i class="bi bi-x fs-5"></i>
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <div class="bg-light p-4 border border-light">
                <h6 class="small text-uppercase ls-1 mb-4 text-dark fw-bold">Upload New Visual</h6>
                <form asp-action="UploadImage" method="post" enctype="multipart/form-data">
                    <input type="hidden" name="productId" value="@Model.Id" />
                    <div class="mb-3">
                        <label class="form-label-luxury">Select File</label>
                        <input type="file" name="image" class="form-control form-luxury pb-2" accept="image/*" required />
                    </div>
                    <div class="mb-4">
                        <label class="form-label-luxury">Alt Text</label>
                        <input type="text" name="altText" class="form-control form-luxury" placeholder="Accessibility description" />
                    </div>
                    <div class="form-check mb-4">
                        <input type="checkbox" name="isPrimary" value="true" class="form-check-input border-dark" id="isPrimary" />
                        <label class="form-check-label text-secondary small ls-1 fw-bold" for="isPrimary">SET AS PRIMARY EXHIBIT</label>
                    </div>
                    <button type="submit" class="btn-luxury-outline w-100 justify-content-center">
                        <i class="bi bi-upload"></i> Upload to Gallery
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
@model Marblin.Core.Entities.Category
@{ ViewData["Title"] = Model.Id == 0 ? "Create Category" : "Edit Category"; }

<div class="admin-header">
    <h1>@ViewData["Title"]</h1>
    <a asp-action="Index" class="btn btn-outline-dark">‚Üê Back</a>
</div>

<div class="stat-card" style="max-width: 500px;">
    <form asp-action="@(Model.Id == 0 ? "Create" : "Edit")" method="post">
        <input type="hidden" asp-for="Id" />
        
        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" required />
        </div>
        <div class="mb-3">
            <label asp-for="Description" class="form-label"></label>
            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
        </div>
        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="SortOrder" class="form-label">Display Order</label>
                <input asp-for="SortOrder" class="form-control" type="number" />
            </div>
            <div class="col-md-6 mb-3">
                <div class="form-check mt-4">
                    <input asp-for="IsActive" class="form-check-input" />
                    <label asp-for="IsActive" class="form-check-label">Active</label>
                </div>
            </div>
        </div>
        <button type="submit" class="btn btn-dark">Save</button>
        <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
    </form>
</div>

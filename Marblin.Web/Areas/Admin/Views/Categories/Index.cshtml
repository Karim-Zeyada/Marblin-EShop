@model Marblin.Core.Common.PaginatedList<Marblin.Core.Entities.Category>
@{
    ViewData["Title"] = "Categories";
}

<div class="d-flex flex-column flex-sm-row justify-content-between align-items-sm-center mb-5 gap-3">
    <h1 class="h2 admin-font-serif mb-0 text-dark">Collections</h1>
    <a asp-action="Create" class="btn-luxury-outline">
        <i class="bi bi-plus-lg"></i> Add Collection
    </a>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert badge-luxury w-100 mb-4 py-3 border-dark-10 text-dark d-flex justify-content-between align-items-center" role="alert">
        <span><i class="bi bi-check2-circle me-2 text-success"></i> @TempData["Success"]</span>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
@if (TempData["Error"] != null)
{
    <div class="alert badge-luxury w-100 mb-4 py-3 border-danger text-danger d-flex justify-content-between align-items-center" role="alert">
        <span><i class="bi bi-exclamation-triangle me-2"></i> @TempData["Error"]</span>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="admin-luxury-card p-0 overflow-hidden">
    @if (Model.Any())
    {
        <div class="table-responsive">
            <table class="table mb-0">
                <thead>
                    <tr>
                        <th style="width: 70px;" class="ps-4">Image</th>
                        <th>Collection</th>
                        <th>Pieces</th>
                        <th>Sort Order</th>
                        <th>Status</th>
                        <th class="text-end pe-4">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var cat in Model)
                    {
                        <tr>
                            <td class="ps-4">
                                @if (!string.IsNullOrEmpty(cat.ImageUrl))
                                {
                                    <div class="bg-light p-1 border border-dark-10" style="width: 50px; height: 50px;">
                                        <img src="@cat.ImageUrl" alt="@cat.Name" style="width: 100%; height: 100%; object-fit: cover;" />
                                    </div>
                                }
                                else
                                {
                                    <div class="bg-light border border-dark-10 d-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
                                        <i class="bi bi-image text-muted"></i>
                                    </div>
                                }
                            </td>
                            <td>
                                <div class="fw-bold text-dark mb-1">@cat.Name</div>
                                @if (!string.IsNullOrEmpty(cat.Description))
                                {
                                    <div class="text-secondary small" style="max-width: 300px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;">
                                        @cat.Description
                                    </div>
                                }
                            </td>
                            <td><span class="text-secondary small">@cat.Products.Count Items</span></td>
                            <td class="admin-font-serif text-dark fw-bold">@cat.SortOrder</td>
                            <td>
                                @if (cat.IsActive)
                                {
                                    <span class="text-success small fw-bold"><i class="bi bi-eye-fill me-1"></i> Visible</span>
                                }
                                else
                                {
                                    <span class="text-secondary small"><i class="bi bi-eye-slash-fill me-1"></i> Hidden</span>
                                }
                            </td>
                            <td class="text-end pe-4">
                                <div class="d-flex justify-content-end gap-2">
                                    <a asp-action="Edit" asp-route-id="@cat.Id" class="btn-luxury-outline btn-luxury-sm" title="Edit Collection">
                                        <i class="text-black bi-pencil"></i>
                                    </a>
                                    <form asp-action="Delete" asp-route-id="@cat.Id" method="post" class="d-inline" onsubmit="return confirm('Archive this collection?');">
                                        <button type="submit" class="btn-luxury-outline btn-luxury-sm text-danger border-danger" title="Delete Collection">
                                            <i class="text-black bi-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="bi bi-tags h1 opacity-10 mb-3 d-block"></i>
            <p class="text-secondary mb-0">No collections defined yet.</p>
            <a asp-action="Create" class="text-dark small text-decoration-none border-bottom border-dark mt-2 d-inline-block">Initialize your first collection &rarr;</a>
        </div>
    }
</div>

@* Pagination Controls *@
@if (Model.TotalPages > 1)
{
    <div class="d-flex justify-content-between align-items-center mt-4">
        <div class="text-secondary small">
            Showing page @Model.PageIndex of @Model.TotalPages (@Model.TotalCount total categories)
        </div>
        <nav aria-label="Category pagination">
            <ul class="pagination pagination-sm mb-0">
                <li class="page-item @(!Model.HasPreviousPage ? "disabled" : "")">
                    <a class="page-link" href="?page=@(Model.PageIndex - 1)">
                        <i class="bi bi-chevron-left"></i> Previous
                    </a>
                </li>

                @{
                    int startPage = Math.Max(1, Model.PageIndex - 2);
                    int endPage = Math.Min(Model.TotalPages, Model.PageIndex + 2);
                }

                @if (startPage > 1)
                {
                    <li class="page-item"><a class="page-link" href="?page=1">1</a></li>
                    @if (startPage > 2)
                    {
                        <li class="page-item disabled"><span class="page-link">...</span></li>
                    }
                }

                @for (int i = startPage; i <= endPage; i++)
                {
                    <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                        <a class="page-link" href="?page=@i">@i</a>
                    </li>
                }

                @if (endPage < Model.TotalPages)
                {
                    @if (endPage < Model.TotalPages - 1)
                    {
                        <li class="page-item disabled"><span class="page-link">...</span></li>
                    }
                    <li class="page-item"><a class="page-link" href="?page=@Model.TotalPages">@Model.TotalPages</a></li>
                }

                <li class="page-item @(!Model.HasNextPage ? "disabled" : "")">
                    <a class="page-link" href="?page=@(Model.PageIndex + 1)">
                        Next <i class="bi bi-chevron-right"></i>
                    </a>
                </li>
            </ul>
        </nav>
    </div>
}
@model Marblin.Core.Entities.Category
@{
    ViewData["Title"] = "Edit Collection";
}

<div class="d-flex flex-column flex-sm-row justify-content-between align-items-sm-center mb-5 gap-3">
    <h1 class="h2 admin-font-serif mb-0 text-dark">Edit Collection</h1>
    <a asp-action="Index" class="btn-luxury-outline btn-luxury-sm">
        <i class="bi bi-arrow-left"></i> Back to Collections
    </a>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert badge-luxury w-100 mb-4 py-3 border-dark-10 text-dark d-flex justify-content-between align-items-center" role="alert">
        <span><i class="bi bi-check2-circle me-2 text-success"></i> @TempData["Success"]</span>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="row">
    <div class="col-12 col-lg-6">
        <div class="admin-luxury-card">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Id" />

                <div class="mb-4">
                    <label asp-for="Name" class="form-label-luxury">Collection Name</label>
                    <input asp-for="Name" class="form-control form-luxury" required />
                </div>

                <div class="mb-4">
                    <label asp-for="Description" class="form-label-luxury">Curatorial Description</label>
                    <textarea asp-for="Description" class="form-control form-luxury" rows="4"></textarea>
                </div>

                <div class="row g-4 mb-5">
                    <div class="col-12 col-sm-6">
                        <label asp-for="SortOrder" class="form-label-luxury">Curation Order</label>
                        <input asp-for="SortOrder" class="form-control form-luxury" type="number" />
                    </div>
                    <div class="col-12 col-sm-6 d-flex align-items-end">
                        <div class="form-check pb-2">
                            <input asp-for="IsActive" class="form-check-input border-dark" />
                            <label asp-for="IsActive" class="form-check-label text-secondary small ls-1 fw-bold">COLLECTION VISIBILITY</label>
                        </div>
                    </div>
                </div>

                <div class="d-flex gap-3">
                    <button type="submit" class="btn-luxury-outline">
                        <i class="bi bi-save"></i> Save Changes
                    </button>
                    <a asp-action="Index" class="btn-luxury-outline text-secondary border-light">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

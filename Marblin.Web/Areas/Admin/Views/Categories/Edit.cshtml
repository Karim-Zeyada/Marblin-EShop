@model Marblin.Core.Entities.Category
@{ ViewData["Title"] = "Edit Category"; }

<div class="admin-header">
    <h1>Edit Category</h1>
    <a asp-action="Index" class="btn btn-outline-dark">‚Üê Back</a>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show"><button type="button" class="btn-close" data-bs-dismiss="alert"></button>@TempData["Success"]</div>
}

<div class="stat-card">
    <form asp-action="Edit" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="ImageUrl" />
        
        <div class="row">
            <div class="col-md-8">
                <div class="mb-4">
                    <h5 class="mb-3">Category Details</h5>
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" class="form-control" required />
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Description" class="form-label"></label>
                        <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="SortOrder" class="form-label">Display Order</label>
                            <input asp-for="SortOrder" class="form-control" type="number" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="form-check mt-4">
                                <input asp-for="IsActive" class="form-check-input" />
                                <label asp-for="IsActive" class="form-check-label">Active</label>
                            </div>
                        </div>
                    </div>

                    <div class="mt-3">
                        <button type="submit" class="btn btn-dark">Save Changes</button>
                        <a asp-action="Index" class="btn btn-outline-secondary ms-2">Cancel</a>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="mb-4">
                    <h5 class="mb-3">Category Image</h5>
                    <div class="mb-3">
                        <label class="form-label">Current Image</label>
                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                        {
                            <div class="mb-2 position-relative">
                                <img src="@Model.ImageUrl" alt="Current Image" class="w-100 rounded border" style="object-fit: cover; aspect-ratio: 1;" />
                            </div>
                        }
                        else
                        {
                            <div class="text-center bg-light rounded p-5 text-muted small mb-3">
                                No image uploaded
                            </div>
                        }
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">Upload New Image</label>
                        <input type="file" name="file" class="form-control" accept="image/*" />
                        <div class="form-text small">Replaces the current image if one exists.</div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

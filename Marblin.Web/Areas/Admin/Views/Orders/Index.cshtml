@model List<Marblin.Core.Entities.Order>
@{
    ViewData["Title"] = "Orders";
}

<div class="d-flex flex-column flex-sm-row justify-content-between align-items-sm-center mb-5 gap-3">
    <h1 class="h2 admin-font-serif mb-0 text-dark">Order Registry</h1>
    <span class="text-secondary small text-uppercase ls-1">Management Console</span>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert badge-luxury w-100 mb-4 py-3 border-dark-10 text-dark d-flex justify-content-between align-items-center" role="alert">
        <span><i class="bi bi-check2-circle me-2 text-success"></i> @TempData["Success"]</span>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Filters Section -->
<div class="admin-luxury-card mb-4">
    <form method="get" class="row g-4 align-items-end">
        <div class="col-12 col-sm-6 col-lg-5">
            <label class="form-label-luxury">Search Registry</label>
            <input type="text" name="search" class="form-control form-luxury" placeholder="Order ID, Customer name or email..." value="@ViewBag.Search" />
        </div>
        <div class="col-12 col-sm-6 col-lg-4">
            <label class="form-label-luxury">Disposition</label>
            <select name="status" class="form-select form-luxury">
                <option value="">All Statuses</option>
                @foreach (var s in Enum.GetValues<Marblin.Core.Enums.OrderStatus>())
                {
                    <option value="@s" selected="@(ViewBag.Status != null && ViewBag.Status == s)">@s</option>
                }
            </select>
        </div>
        <div class="col-12 col-lg-3">
            <button type="submit" class="btn-luxury-outline w-100 justify-content-center">
                <i class="bi bi-funnel"></i> Filter Registry
            </button>
        </div>
    </form>
</div>

<!-- Orders Table -->
<div class="admin-luxury-card p-0 overflow-hidden">
    @if (Model.Any())
    {
        <div class="table-responsive">
            <table class="table mb-0">
                <thead>
                    <tr>
                        <th class="ps-4">Reference</th>
                        <th>Client Details</th>
                        <th>Value</th>
                        <th>Payment Method</th>
                        <th>Deposit Status</th>
                        <th>Aesthetic State</th>
                        <th>Registry Date</th>
                        <th class="text-end pe-4">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var o in Model)
                    {
                        <tr>
                            <td class="ps-4">
                                <a asp-action="Details" asp-route-id="@o.Id" class="text-dark text-decoration-none fw-bold ls-1 hover-dark">
                                    #@o.OrderNumber
                                </a>
                            </td>
                            <td>
                                <div class="text-dark fw-bold">@o.CustomerName</div>
                                <div class="text-secondary small">@o.Email</div>
                            </td>
                            <td class="admin-font-serif font-playfair text-dark">@o.TotalAmount.ToString("C2")</td>
                            <td>
                                @if (o.PaymentMethod == Marblin.Core.Enums.PaymentMethod.FullPaymentUpfront)
                                {
                                    <span class="badge bg-success">Full Payment</span>
                                }
                                else
                                {
                                    <span class="badge bg-primary">COD</span>
                                }
                            </td>
                            <td>
                                <div class="d-flex align-items-center gap-2">
                                    <span class="text-secondary small">@o.DepositAmount.ToString("C2")</span>
                                    @if (o.IsDepositVerified)
                                    {
                                        <i class="bi bi-patch-check-fill text-success" title="Verified"></i>
                                    }
                                    else
                                    {
                                        <i class="bi bi-clock-history text-muted" title="Awaiting Verification"></i>
                                    }
                                </div>
                            </td>
                            <td>
                                <span class="badge-luxury">@o.Status</span>
                            </td>
                            <td class="text-secondary small">@o.CreatedAt.ToString("MMM d, yyyy")</td>
                            <td class="text-end pe-4">
                                <a asp-action="Details" asp-route-id="@o.Id" class="btn-luxury-outline btn-luxury-sm">
                                    Inspect &rarr;
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="bi bi-receipt h1 opacity-10 mb-3 d-block"></i>
            <p class="text-secondary mb-0">No entries found in the order registry.</p>
        </div>
    }
</div>

@* Pagination Controls *@
@if (ViewBag.TotalPages > 1)
{
    <div class="d-flex justify-content-between align-items-center mt-4">
        <div class="text-secondary small">
            Showing page @ViewBag.CurrentPage of @ViewBag.TotalPages (@ViewBag.TotalCount total orders)
        </div>
        <nav aria-label="Order pagination">
            <ul class="pagination pagination-sm mb-0">
                @* Previous Button *@
                <li class="page-item @((int)ViewBag.CurrentPage == 1 ? "disabled" : "")">
                    <a class="page-link" href="?page=@((int)ViewBag.CurrentPage - 1)&status=@ViewBag.Status&search=@ViewBag.Search">
                        <i class="bi bi-chevron-left"></i> Previous
                    </a>
                </li>

                @* Page Numbers *@
                @{
                    int currentPage = ViewBag.CurrentPage;
                    int totalPages = ViewBag.TotalPages;
                    int startPage = Math.Max(1, currentPage - 2);
                    int endPage = Math.Min(totalPages, currentPage + 2);
                }

                @if (startPage > 1)
                {
                    <li class="page-item">
                        <a class="page-link" href="?page=1&status=@ViewBag.Status&search=@ViewBag.Search">1</a>
                    </li>
                    @if (startPage > 2)
                    {
                        <li class="page-item disabled"><span class="page-link">...</span></li>
                    }
                }

                @for (int i = startPage; i <= endPage; i++)
                {
                    <li class="page-item @(i == currentPage ? "active" : "")">
                        <a class="page-link" href="?page=@i&status=@ViewBag.Status&search=@ViewBag.Search">@i</a>
                    </li>
                }

                @if (endPage < totalPages)
                {
                    @if (endPage < totalPages - 1)
                    {
                        <li class="page-item disabled"><span class="page-link">...</span></li>
                    }
                    <li class="page-item">
                        <a class="page-link" href="?page=@totalPages&status=@ViewBag.Status&search=@ViewBag.Search">@totalPages</a>
                    </li>
                }

                @* Next Button *@
                <li class="page-item @((int)ViewBag.CurrentPage >= (int)ViewBag.TotalPages ? "disabled" : "")">
                    <a class="page-link" href="?page=@((int)ViewBag.CurrentPage + 1)&status=@ViewBag.Status&search=@ViewBag.Search">
                        Next <i class="bi bi-chevron-right"></i>
                    </a>
                </li>
            </ul>
        </nav>
    </div>
}
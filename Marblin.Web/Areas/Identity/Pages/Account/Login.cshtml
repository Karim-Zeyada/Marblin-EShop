@page
@model LoginModel

@{
    ViewData["Title"] = "Admin Login";
}

<div class="container d-flex align-items-center justify-content-center" style="min-height: calc(100vh - 200px);"> <!-- Calculated height to center vertically within available space -->
    <div class="card shadow-lg animate-fade-in-up border-0" style="width: 100%; max-width: 450px;">
        <div class="card-body p-5">
            <div class="text-center mb-5">
                <h2 class="serif-font fw-bold letter-spacing-2 mb-2">MARBLIN</h2>
                <div class="separator-line mx-auto my-3"></div>
                <p class="text-secondary small text-uppercase letter-spacing-1">Administration Access</p>
            </div>

            <form id="account" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger small mb-3 text-center" role="alert"></div>
                
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control bg-light border-0" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email">Email Address</label>
                    <span asp-validation-for="Input.Email" class="text-danger small"></span>
                </div>
                
                <div class="form-floating mb-4">
                    <input asp-for="Input.Password" class="form-control bg-light border-0" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger small"></span>
                </div>
                
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div class="form-check">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        <label class="form-check-label text-secondary small" asp-for="Input.RememberMe">
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                    <a asp-page="./ForgotPassword" class="text-secondary small text-decoration-none transition-all hover-underline">Forgot Password?</a>
                </div>
                
                <div class="d-grid gap-2">
                    <button id="login-submit" type="submit" class="btn btn-dark py-3 shadow-sm">Sign In</button>
                </div>
                
                <div class="text-center mt-4">
                    <a href="/" class="text-secondary text-decoration-none small hover-underline transition-all">Return to Store</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
